<UserControl x:Class="HospitalManagementSystem.LabWorkerRequests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Queue list -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Pending Requests"
                                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <!-- Filters -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker Grid.Column="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="From date"
                                                SelectedDate="{Binding RequestsFromDate}"/>
                                    <DatePicker Grid.Column="1"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="To date"
                                                SelectedDate="{Binding RequestsToDate}"/>
                                    <ComboBox Grid.Column="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              ItemsSource="{Binding Doctors}"
                                              SelectedItem="{Binding SelectedDoctorFilter}"/>
                                </Grid>

                                <DataGrid Grid.Row="2" Margin="0,8,0,0"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding LabRequests}"
                                          SelectedItem="{Binding SelectedLabRequest}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Requested" Binding="{Binding RequestedDate, StringFormat=d}" Width="*"/>
                                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="2*"/>
                                        <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="2*"/>
                                        <DataGridTextColumn Header="Test" Binding="{Binding TestName}" Width="2*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Request details & quick result -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             ClipToBounds="True">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>  <!-- title -->
                                        <RowDefinition Height="Auto"/>  <!-- patient/doctor -->
                                        <RowDefinition Height="*"/>     <!-- description -->
                                        <RowDefinition Height="Auto"/>  <!-- result -->
                                        <RowDefinition Height="Auto"/>  <!-- buttons -->
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Request Details"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:HintAssist.Hint="Patient"
                                                 Text="{Binding SelectedLabRequest.PatientName}" IsReadOnly="True"/>
                                        <TextBox Grid.Column="1"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:HintAssist.Hint="Doctor"
                                                 Text="{Binding SelectedLabRequest.DoctorName}" IsReadOnly="True"/>
                                    </Grid>

                                    <TextBox Grid.Row="2" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="140"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Description / Notes"
                                             Text="{Binding SelectedLabRequest.Description}"/>

                                    <!-- Quick result entry -->
                                    <TextBox Grid.Row="3" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Result data"
                                             Text="{Binding SelectedLabRequest.ResultDraft}"/>

                                    <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                                                Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Start"   Style="{DynamicResource MaterialDesignFlatButton}"
                                                Command="{Binding StartProcessingRequestCommand}"/>
                                        <Button Content="Save"    Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"
                                                Command="{Binding SaveRequestDraftCommand}"/>
                                        <Button Content="Complete" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"
                                                Command="{Binding CompleteRequestCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
