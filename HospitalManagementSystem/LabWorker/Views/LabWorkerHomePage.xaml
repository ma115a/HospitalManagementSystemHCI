<UserControl x:Class="HospitalManagementSystem.LabWorker.Views.LabWorkerHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d"
             >
    
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                       

                        <UniformGrid Grid.Row="1" Columns="3">
                            <UniformGrid.Resources>
                                <Style TargetType="materialDesign:Card">
                                    <Setter Property="Padding" Value="20"/>
                                    <Setter Property="UniformCornerRadius" Value="12"/>
                                    <Setter Property="Margin" Value="12"/>
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Style>
                            </UniformGrid.Resources>

                            <!-- Requests Queue -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ClipboardListOutline" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc requestsQueue}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="{loc:Loc requestQueueContent}" TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}" Width="130"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToRequestsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Enter Results -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FlaskRoundBottom" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc enterResults}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="{loc:Loc enterResultsContent}" TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}" Width="130"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToResultsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Results History -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocumentOutline" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc resultsHistory}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="{loc:Loc resultHistoryContent}" TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}" Width="130"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            
                        </UniformGrid>
                    </Grid>
                </ScrollViewer>
            
</UserControl>
