<UserControl x:Class="HospitalManagementSystem.LabWorker.Views.LabWorkerRequests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding DataContext.GoToDashboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Queue list -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,10"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Pending Requests"
                                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <!-- Filters -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <DatePicker Grid.Column="0"
                                                Grid.Row="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="From date"
                                                Margin="0,0,5,10"
                                                SelectedDate="{Binding StartDateFilter}"/>
                                    <DatePicker Grid.Column="1"
                                                Grid.Row="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="To date"
                                                Margin="5,0,5,10"
                                                SelectedDate="{Binding EndDateFilter}"/>
                                    <ComboBox Grid.Column="0"
                                              Grid.Row="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              Margin="5,0,5,10"
                                              ItemsSource="{Binding Doctors}"
                                              SelectedItem="{Binding SelectedDoctorFilter}">
                                        
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding employee.name}"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    
                                    <ComboBox Grid.Column="1"
                                              Grid.Row="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Nurse"
                                              Margin="5,0,5,10"
                                              ItemsSource="{Binding Nurses}"
                                              SelectedItem="{Binding SelectedNurseFilter}">
                                        
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding employee.name}"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ComboBox Grid.ColumnSpan="2"
                                              Grid.Row="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Patient"
                                              Margin="5,0,5,10"
                                              IsTextSearchEnabled="True"
                                              ItemsSource="{Binding Patients}"
                                              SelectedItem="{Binding SelectedPatientFilter}">
                                        
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding name}"></TextBlock>
                                                    <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                    <TextBlock Text="{Binding umcn}"></TextBlock>
                                                    <TextBlock Text=" )"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <Border Grid.RowSpan="3" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,10">
                                        
                                        <Button Content="Clear"
                                                Style="{DynamicResource MaterialDesignFlatButton}"
                                                Command="{Binding ClearFiltersCommand}"/>
                                    </Border>
                                </Grid>

                                <DataGrid Grid.Row="2" Margin="0,8,0,0"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          IsReadOnly="True"
                                          CanUserDeleteRows="False"
                                          ItemsSource="{Binding LaboratoryTestsView}"
                                          SelectedItem="{Binding SelectedLaboratoryTest}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Requested" Binding="{Binding date, StringFormat=d}" Width="*"/>
                                        <DataGridTextColumn Header="Patient" Binding="{Binding patient_umcnNavigation.name}" Width="2*"/>
                                        <DataGridTextColumn Header="Doctor" Binding="{Binding doctor.employee.name}" Width="2*"/>
                                        <DataGridTextColumn Header="Test" Binding="{Binding name}" Width="2*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Request details & quick result -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,10"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             >
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>  <!-- title -->
                                        <RowDefinition Height="Auto"/>  <!-- patient/doctor -->
                                        <RowDefinition Height="Auto"/>  <!-- patient/doctor -->
                                        <RowDefinition Height="Auto"/>     <!-- description -->
                                        <RowDefinition Height="*"/>  <!-- result -->
                                        <RowDefinition Height="Auto"/>  <!-- buttons -->
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Request Details"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                        <TextBox Grid.Row="1"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                 materialDesign:HintAssist.IsFloating="False"
                                                 materialDesign:HintAssist.Hint="Patient"
                                                 Margin="0,0,0,10"
                                                 Text="{Binding SelectedLaboratoryTest.patient_umcnNavigation.name}" IsReadOnly="True"/>
                                        <TextBox Grid.Row="2"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                 materialDesign:HintAssist.IsFloating="False"
                                                 materialDesign:HintAssist.Hint="Doctor"
                                                 Margin="0,0,0,10"
                                                 Text="{Binding SelectedLaboratoryTest.doctor.employee.name}" IsReadOnly="True"/>
                                    <TextBox Grid.Row="3"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             materialDesign:HintAssist.Hint="Nurse"
                                             Margin="0,0,0,10"
                                             Text="{Binding SelectedLaboratoryTest.nurse.employee.name}" IsReadOnly="True"/>
                                    <TextBox Grid.Row="4"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="140"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,0,10"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Description / Notes"
                                             IsReadOnly="True"
                                             Text="{Binding SelectedLaboratoryTest.description}"/>

                                    <!-- Quick result entry -->
                                    <!--<TextBox Grid.Row="4" 
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,0,10"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Result data"
                                             Text="{Binding SelectedLabRequest.ResultDraft}"/>-->

                                    <StackPanel Grid.Row="5"
                                                Margin="0,0,0,10"
                                                Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Start test"   Style="{DynamicResource MaterialDesignFlatButton}"
                                                Command="{Binding StartTestCommand}"/>
                                        
                                        <Button Content="Complete" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"
                                                Command="{Binding CompleteRequestCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
