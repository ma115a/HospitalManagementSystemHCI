<Window x:Class="HospitalManagementSystem.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
        mc:Ignorable="d"
        Title="Hospital Management System" Height="620" Width="820"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- ⚙️ Settings button (top right corner) -->
        <Button HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Style="{StaticResource MaterialDesignIconButton}"
                Click="SettingsButton_Click">
            <materialDesign:PackIcon Kind="Cog"
                                     Width="20"
                                     Height="20"
                                     Foreground="Black"/>
            <Button.ContextMenu>
                <ContextMenu Opened="SettingsMenu_Opened">
                    <!-- Languages -->
                    <MenuItem Header="🌐 Language">
                        <MenuItem Header="English" Tag="en" Click="LanguageMenu_Click" IsCheckable="True"/>
                        <MenuItem Header="Srpski" Tag="sr" Click="LanguageMenu_Click" IsCheckable="True"/>
                        <MenuItem Header="Deutsch" Tag="de" Click="LanguageMenu_Click" IsCheckable="True"/>
                    </MenuItem>

                    <!-- Theme -->
                    <MenuItem Header="🎨 Theme">
                        <MenuItem Header="Light" Tag="Light" Click="ThemeMenu_Click" IsCheckable="True"/>
                        <MenuItem Header="Dark" Tag="Dark" Click="ThemeMenu_Click" IsCheckable="True"/>
                    </MenuItem>

                    <!-- Primary Colors -->
                    <MenuItem Header="🎨 Primary Color">
                        <MenuItem Header="Indigo" Tag="#3F51B5" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                        <MenuItem Header="Blue" Tag="#2196F3" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                        <MenuItem Header="Green" Tag="#4CAF50" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                    </MenuItem>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>

        <!-- Card -->
        <materialDesign:Card Width="720" Padding="42" HorizontalAlignment="Center" VerticalAlignment="Center"
                             materialDesign:ElevationAssist.Elevation="Dp12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title / Icon -->
                <StackPanel Grid.Row="0" Margin="0,0,0,12" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="HospitalBuilding" Width="40" Height="40" HorizontalAlignment="Center"/>
                    <TextBlock Text="Hospital Management System" FontSize="26" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Form -->
                <StackPanel Grid.Row="1" MinWidth="380">
                    <TextBox x:Name="UsernameBox" 
                             materialDesign:HintAssist.Hint="{loc:Loc usernameBox}" 
                             FontSize="14" 
                             VerticalContentAlignment="Center" 
                             Text="{Binding Username}"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="0,-4,0,0" 
                             materialDesign:HintAssist.IsFloating="False" 
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:TextFieldAssist.IconVerticalAlignment="Center"
                             materialDesign:TextFieldAssist.LeadingIcon="User"
                             materialDesign:TextFieldAssist.HasLeadingIcon="True"
                             materialDesign:TextFieldAssist.UnderlineCornerRadius="6"/>
                    
                    
                    <PasswordBox x:Name="PasswordBox" 
                                 materialDesign:HintAssist.Hint="{loc:Loc passwordBox}" 
                                 FontSize="14" 
                                 VerticalContentAlignment="Center" 
                                 materialDesign:TextFieldAssist.TextBoxViewMargin="0,-4,0,0" 
                                 materialDesign:HintAssist.IsFloating="False" 
                                 Style="{StaticResource MaterialDesignFilledRevealPasswordBox}" 
                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True" 
                                 materialDesign:TextFieldAssist.UnderlineCornerRadius="6"
                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                 materialDesign:TextFieldAssist.IconVerticalAlignment="Center"
                                 materialDesign:TextFieldAssist.LeadingIcon="Password"
                                 materialDesign:TextFieldAssist.HasLeadingIcon="True"
                                 materialDesign:PasswordBoxAssist.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:PasswordBoxAssist.PasswordMaskedIcon="EyeOff"
                                 materialDesign:PasswordBoxAssist.PasswordRevealedIcon="Eye"
                                 Margin="0,8,0,0">
                        <PasswordBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding LoginCommand}"></KeyBinding>
                        </PasswordBox.InputBindings>
                    </PasswordBox>

                    <Button Content="{loc:Loc loginBtn}" Margin="0,16,0,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsButtonEnabled}"
                            Height="35"/>
                </StackPanel>

                <!-- Message -->
                <materialDesign:Snackbar Grid.Row="2" x:Name="MainSnackbar"
                                         MessageQueue="{Binding MessageQueue}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         HorizontalContentAlignment="Center"
                                         Background="{DynamicResource MaterialDesignPaper}"
                                         Foreground="{DynamicResource MaterialDesignBody}"
                                         Margin="20">
                            <materialDesign:Snackbar.Resources>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="Grid">
                                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                </Style>
                            </materialDesign:Snackbar.Resources>
                    </materialDesign:Snackbar>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
