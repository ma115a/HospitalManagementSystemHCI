<UserControl x:Class="HospitalManagementSystem.Doctor.Views.PrescriptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d">

  

    <DockPanel>

        <!-- BACK BAR -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="GoToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Dashboard"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- TOP TOOLBAR (responsive grid) -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>          <!-- + button -->
                    <ColumnDefinition Width="Auto"/>          <!-- Save button -->
                    <ColumnDefinition Width="Auto"/>          <!-- magnify icon -->
                    <ColumnDefinition Width="3*" MinWidth="180"/>  <!-- SEARCH grows most -->
                    <ColumnDefinition Width="2*" MinWidth="140"/>  <!-- FROM date grows -->
                    <ColumnDefinition Width="2*" MinWidth="140"/>  <!-- TO date grows -->
                    <ColumnDefinition Width="Auto"/>          <!-- magnify icon -->
                </Grid.ColumnDefinitions>

                
                <Button Content="New"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewPrescriptionCommand}"/>
                <Button Grid.Column="1" Content="Edit"
                        Margin="8,0,0,0"
                        Command="{Binding EditPrescriptionCommand}"
                        IsEnabled="{Binding IsControls2Enabled}"
                        Style="{DynamicResource MaterialDesignFlatButton}" />

                <materialDesign:PackIcon Grid.Column="2" Kind="Magnify"
                                         Height="20" VerticalAlignment="Center" Margin="8,0,6,0"/>
                <TextBox Grid.Column="3"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="Search prescriptions"
                         materialDesign:HintAssist.IsFloating="False"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Text="{Binding SearchPrescription, UpdateSourceTrigger=PropertyChanged}"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                <DatePicker Grid.Column="4"
                            HorizontalAlignment="Stretch"
                            Margin="8,0,0,0"
                            materialDesign:HintAssist.Hint="From date"
                            materialDesign:HintAssist.IsFloating="False"
                            SelectedDate="{Binding SearchPrescriptionStartDate, UpdateSourceTrigger=PropertyChanged}"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
                <DatePicker Grid.Column="5" 
                            HorizontalAlignment="Stretch"
                            Margin="8,0,0,0"
                            materialDesign:HintAssist.Hint="To date"
                            materialDesign:HintAssist.IsFloating="False"
                            SelectedDate="{Binding SearchPrescriptionEndDate, UpdateSourceTrigger=PropertyChanged}"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
                
                <Border Grid.Column="6" VerticalAlignment="Center" Margin="5,0,0,10">
                    <Button Content="Clear"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Command="{Binding ClearFiltersCommand}"/>
                </Border>
            </Grid>
        </Border>

        <!-- PATIENT BANNER -->
        <materialDesign:Card DockPanel.Dock="Top" materialDesign:ElevationAssist.Elevation="Dp4" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
        <local:PatientBasicInfo DockPanel.Dock="Top"/>
        </materialDesign:Card>

        <!-- MAIN: LIST (left) / FORM (right) -->
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Existing prescriptions -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="20"
                                 UniformCornerRadius="12"
                                 Margin="10,0,5,0"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Prescriptions" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,17"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnSurface}" />

                    <DataGrid Grid.Row="1"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              Margin="10,0"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding PrescriptionsView}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedPrescription, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Date" Binding="{Binding date, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Medication" Binding="{Binding medication}" Width="2*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Dosage" Binding="{Binding dosage}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- RIGHT: Make Prescription form -->
            <materialDesign:Card Grid.Column="1"
                                 Padding="20"
                                 Margin="5,0,10,0"
                                 UniformCornerRadius="12"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Row 6 is star (*) so the notes box stretches; buttons stay Auto -->
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/> <!-- 0: title -->
        <RowDefinition Height="Auto"/> <!-- 1: date -->
        <RowDefinition Height="Auto"/> <!-- 2: medication -->
        <RowDefinition Height="Auto"/> <!-- 3: dosage/route -->
        <RowDefinition Height="Auto"/> <!-- 4: frequency/duration -->
        <RowDefinition Height="Auto"/> <!-- 5: quantity/refills -->
        <RowDefinition Height="*"/>    <!-- 6: instructions grows -->
        <RowDefinition Height="Auto"/> <!-- 7: spacer (optional) -->
        <RowDefinition Height="Auto"/> <!-- 8: buttons -->
    </Grid.RowDefinitions>

    <TextBlock Grid.ColumnSpan="2" Text="New Prescription"
               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,17"/>

    <!-- Date -->
    <DatePicker Grid.Row="1" Grid.ColumnSpan="2"
                Style="{DynamicResource MaterialDesignFilledDatePicker}"
                materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                materialDesign:HintAssist.Hint="Date"
                materialDesign:HintAssist.IsFloating="False"
                Margin="0,0,0,10"
                IsEnabled="{Binding IsControlsEnabled}"
                SelectedDate="{Binding SelectedPrescription.date, Mode=TwoWay}"/>

    <!-- Medication (editable ComboBox for type-ahead) -->
    <ComboBox Grid.Row="2" Grid.ColumnSpan="2"
              IsEditable="True"
              StaysOpenOnEdit="True"
              IsTextSearchEnabled="False"
              ItemsSource="{Binding MedicationsView}"
              Text="{Binding MedicationSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
              materialDesign:HintAssist.Hint="Medication"
              SelectedValue="{Binding SelectedMedication, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              materialDesign:HintAssist.IsFloating="False"
              IsEnabled="{Binding IsControlsEnabled}"
              Margin="0,0,0,10"/>

    <!-- Dosage -->
    <TextBox Grid.Row="3" Grid.ColumnSpan="2"
             Style="{DynamicResource MaterialDesignFilledTextBox}"
             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
             materialDesign:HintAssist.Hint="Dosage (e.g., 500 mg)"
             materialDesign:HintAssist.IsFloating="False"
             Margin="0,0,0,10"
             IsEnabled="{Binding IsControlsEnabled}"
             Text="{Binding SelectedPrescription.dosage, Mode=TwoWay}"/>
    

    

    <!-- Frequency -->
    <ComboBox Grid.Row="4" Grid.Column="0"
              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
              materialDesign:HintAssist.Hint="Frequency"
              materialDesign:HintAssist.IsFloating="False"
              Margin="0,0,5,10"
              ItemsSource="{Binding Frequencies}"
              IsEnabled="{Binding IsControlsEnabled}"
              SelectedValuePath="Content"
              SelectedValue="{Binding SelectedPrescription.frequency, Mode=TwoWay}">
    <ComboBoxItem>Once daily</ComboBoxItem>
    <ComboBoxItem>Twice daily</ComboBoxItem>
    <ComboBoxItem>Three times daily</ComboBoxItem>
    <ComboBoxItem>Four times daily</ComboBoxItem>
    <ComboBoxItem>Every 4 hours</ComboBoxItem>
    <ComboBoxItem>Every 6 hours</ComboBoxItem>
    <ComboBoxItem>Every 8 hours</ComboBoxItem>
    <ComboBoxItem>Every 12 hours</ComboBoxItem>
    <ComboBoxItem>As needed</ComboBoxItem>
    <ComboBoxItem>Before meals</ComboBoxItem>
    <ComboBoxItem>After meals</ComboBoxItem>
    <ComboBoxItem>At bedtime</ComboBoxItem>
    <ComboBoxItem>Every other day</ComboBoxItem>
    <ComboBoxItem>Weekly</ComboBoxItem>
    </ComboBox>

    <!-- Duration -->
    <TextBox Grid.Row="4" Grid.Column="1"
             Style="{DynamicResource MaterialDesignFilledTextBox}"
             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
             materialDesign:HintAssist.Hint="Duration (e.g., 7 days)"
             materialDesign:HintAssist.IsFloating="False"
             Margin="5,0,0,10"
             IsEnabled="{Binding IsControlsEnabled}"
             Text="{Binding SelectedPrescription.duration, Mode=TwoWay}"/>

   

    <!-- Refills -->
    <TextBox Grid.Row="5" Grid.ColumnSpan="2"
             Style="{DynamicResource MaterialDesignFilledTextBox}"
             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
             materialDesign:HintAssist.Hint="Refills"
             materialDesign:HintAssist.IsFloating="False"
             Margin="0,0,0,10"
             IsEnabled="{Binding IsControlsEnabled}"
             Text="{Binding SelectedPrescription.refills, Mode=TwoWay}"/>

    <!-- Instructions / Notes (grows with window) -->
    <TextBox Grid.Row="6" Grid.ColumnSpan="2"
             AcceptsReturn="True" TextWrapping="Wrap"
             VerticalAlignment="Stretch" MinHeight="40"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             Style="{DynamicResource MaterialDesignFilledTextBox}"
             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
             materialDesign:HintAssist.Hint="Instructions / Notes"
             materialDesign:HintAssist.IsFloating="False"
             IsEnabled="{Binding IsControlsEnabled}"
             Text="{Binding SelectedPrescription.notes, Mode=TwoWay}"/>

    <!-- Buttons -->
    <StackPanel Grid.Row="8" Grid.ColumnSpan="2"
                Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
        <Button Content="Cancel" Margin="0,0,5,0" IsEnabled="{Binding IsControlsEnabled}" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding CancelPrescriptionCommand}" />
        <Button Content="Save" Margin="5,0,0,0" IsEnabled="{Binding IsControlsEnabled}"  Style="{DynamicResource MaterialDesignRaisedButton}" Command="{Binding SavePrescriptionCommand}" />
    </StackPanel>
</Grid>

            </materialDesign:Card>
        </Grid>
    </DockPanel>
</UserControl>
