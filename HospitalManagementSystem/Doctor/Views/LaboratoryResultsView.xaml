<UserControl x:Class="HospitalManagementSystem.Doctor.Views.LaboratoryResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d">

    <!-- ESC to go back -->
    <UserControl.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{Binding DataContext.GoToDashboardCommand,
                                      RelativeSource={RelativeSource AncestorType=Window}}"/>
    </UserControl.InputBindings>

    <DockPanel>

        <!-- BACK BAR -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="GoToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Dashboard"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- TOP TOOLBAR (responsive) -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>            <!-- New Request -->
                    <ColumnDefinition Width="Auto"/>            <!-- magnify -->
                    <ColumnDefinition Width="3*" MinWidth="300"/> <!-- search grows -->
                    <ColumnDefinition Width="2*" MinWidth="140"/> <!-- To -->
                    <ColumnDefinition Width="2*" MinWidth="140"/> <!-- From -->
                    <ColumnDefinition Width="Auto"/>            <!-- Status lbl -->
                    <ColumnDefinition Width="1.5*" MinWidth="140"/> <!-- Status filter -->
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Request Lab"
                        Style="{DynamicResource MaterialDesignFlatButton}"/>
                

                <materialDesign:PackIcon Grid.Column="1" Kind="Magnify"
                                         Height="20" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Grid.Column="2"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="Search tests / results"
                         materialDesign:HintAssist.IsFloating="False"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                <DatePicker Grid.Column="3"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="From date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
                <DatePicker Grid.Column="4" Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="To date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                <TextBlock Grid.Column="5" Text="Status:"
                           VerticalAlignment="Center" Margin="12,0,6,0"
                           Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"/>
                <ComboBox Grid.Column="6"
                          ItemsSource="{Binding ResultStatuses}"
                          SelectedItem="{Binding SelectedStatusFilter}"
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="All statuses"
                          materialDesign:HintAssist.IsFloating="False"/>
            </Grid>
        </Border>

        <!-- PATIENT BANNER -->
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4"  DockPanel.Dock="Top" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
        <local:PatientBasicInfo/>
        </materialDesign:Card>

        <!-- MAIN: LIST (left) / DETAILS (right) -->
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Results list -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="20"
                                 UniformCornerRadius="12"
                                 Margin="10,0,5,0"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Laboratory Results" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,17"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnSurface}" />

                    <DataGrid Grid.Row="1"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              Margin="10,0"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding LabResults}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedLabResult, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Date" Binding="{Binding ResultDate, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Test" Binding="{Binding TestName}" Width="2*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- RIGHT: Result details -->
            <materialDesign:Card Grid.Column="1"
                                 Padding="20"
                                 Margin="5,0,10,0"
                                 UniformCornerRadius="12"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>  <!-- title -->
                        <RowDefinition Height="Auto"/>  <!-- test/status -->
                        <RowDefinition Height="Auto"/>  <!-- ordered by / sample type -->
                        <RowDefinition Height="Auto"/>  <!-- collected / result -->
                        <RowDefinition Height="*"/>    <!-- analytes grid -->
                        <RowDefinition Height="Auto"/>  <!-- comments -->
                        <RowDefinition Height="Auto"/>  <!-- buttons -->
                    </Grid.RowDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Result Details"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,17"/>

                    <!-- Test name / Status -->
                    <TextBox Grid.Row="1" Grid.Column="0"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Test name"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="0,0,8,10"
                             Text="{Binding SelectedLabResult.TestName, Mode=TwoWay}"/>

                    <ComboBox Grid.Row="1" Grid.Column="1"
                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Status"
                              materialDesign:HintAssist.IsFloating="False"
                              Margin="8,0,0,10"
                              ItemsSource="{Binding ResultStatuses}"
                              SelectedItem="{Binding SelectedLabResult.Status, Mode=TwoWay}"/>

                    <!-- Ordered by / Sample type -->
                    <TextBox Grid.Row="2" Grid.Column="0"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Ordered by (doctor)"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="0,0,8,10"
                             Text="{Binding SelectedLabResult.OrderedBy, Mode=TwoWay}"/>

                    <ComboBox Grid.Row="2" Grid.Column="1"
                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Sample type"
                              materialDesign:HintAssist.IsFloating="False"
                              Margin="8,0,0,10"
                              ItemsSource="{Binding SampleTypes}"
                              SelectedItem="{Binding SelectedLabResult.SampleType, Mode=TwoWay}"/>

                    <!-- Collected / Result dates -->
                    <DatePicker Grid.Row="3" Grid.Column="0"
                                Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                materialDesign:HintAssist.Hint="Collected on"
                                materialDesign:HintAssist.IsFloating="False"
                                Margin="0,0,8,10"
                                SelectedDate="{Binding SelectedLabResult.CollectedOn, Mode=TwoWay}"/>

                    <DatePicker Grid.Row="3" Grid.Column="1"
                                Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                materialDesign:HintAssist.Hint="Result date"
                                materialDesign:HintAssist.IsFloating="False"
                                Margin="8,0,0,10"
                                SelectedDate="{Binding SelectedLabResult.ResultDate, Mode=TwoWay}"/>

                    <!-- Analytes / values -->
                    <DataGrid Grid.Row="4" Grid.ColumnSpan="2"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              Margin="0,0,0,10"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding SelectedLabResult.Analytes}"
                              CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Parameter" Binding="{Binding Name}" Width="2*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Value" Binding="{Binding Value}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Units" Binding="{Binding Units}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Reference Range" Binding="{Binding ReferenceRange}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Comments -->
                    <TextBox Grid.Row="5" Grid.ColumnSpan="2"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Comments"
                             materialDesign:HintAssist.IsFloating="False"
                             Height="80"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                                Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}" />
                        <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </DockPanel>
</UserControl>
