<UserControl x:Class="HospitalManagementSystem.Doctor.Views.MakeAdmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:utils="clr-namespace:HospitalManagementSystem.Utils"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
            Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <utils:DateConverter x:Key="DateConverter"></utils:DateConverter>
    </UserControl.Resources>
    <DockPanel>

        <!-- BACK BAR -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="GoToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="{loc:Loc backToDashboard}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- TOP TOOLBAR (responsive grid) -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>            <!-- New -->
                    <ColumnDefinition Width="Auto"/>            <!-- Discharge -->
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="{loc:Loc newBtn}"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewAdmissionCommand}"/>
                    <Button Content="{loc:Loc editBtn}" IsEnabled="{Binding IsControls2Enabled}"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditAdmissionCommand}"/>
                    <Button Content="{loc:Loc deleteBtn}" IsEnabled="{Binding IsControls2Enabled}" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeleteAdmissionCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PATIENT BANNER -->
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4" DockPanel.Dock="Top" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
        <local:PatientBasicInfo/>
            
        </materialDesign:Card>

        <!-- MAIN: LIST (left) / FORM (right) -->
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Admissions list -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="20"
                                 UniformCornerRadius="12"
                                 Margin="10,0,5,0"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                    
                <Grid>
                    <!-- Added rows 3 & 4 for Admissions -->
                    <Grid.RowDefinitions>
                      <RowDefinition Height="Auto"/>  <!-- title -->
                      <RowDefinition Height="Auto"/>  <!-- filters -->
                      <RowDefinition Height="1*"/>    <!-- rooms grid -->
                      <RowDefinition Height="Auto"/>  <!-- admissions header -->
                      <RowDefinition Height="*"/>     <!-- admissions grid -->
                    </Grid.RowDefinitions>

                    <TextBlock Text="{loc:Loc rooms}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

                    <!-- Filters -->
                    <Grid Grid.Row="1">
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                      </Grid.ColumnDefinitions>

                      <ComboBox Grid.Column="0"
                                Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                materialDesign:HintAssist.Hint="{loc:Loc department}"
                                materialDesign:HintAssist.IsFloating="False"
                                ItemsSource="{Binding Departments}"
                                Margin="0,0,0,10"
                                SelectedItem="{Binding FilterDepartment, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                          <DataTemplate>
                            <!-- show just department name (adjust if you expose a Head later) -->
                            <TextBlock Text="{Binding name}"/>
                          </DataTemplate>
                        </ComboBox.ItemTemplate>
                      </ComboBox>

                      <Border Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,10">
                        <Button Content="{loc:Loc cancelBtn}"
                                Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding ClearFilterCommand}"/>
                      </Border>
                    </Grid>

                    <!-- Rooms list -->
                    <DataGrid Grid.Row="2"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              ItemsSource="{Binding Rooms}"
                              SelectedItem="{Binding SelectedRoom}">
                      <DataGrid.Columns>
                        <!-- Keep your properties, or switch to room_id/capacity if that’s what your model exposes -->
                        <DataGridTextColumn Header="{loc:Loc room}" Binding="{Binding number}" Width="*"/>
                        <DataGridTextColumn Header="{loc:Loc capacityGrid}" Binding="{Binding capacity}" Width="Auto"/>
                      </DataGrid.Columns>
                    </DataGrid>

                    <!-- Admissions header -->
                    <TextBlock Grid.Row="3"
                               Text="{loc:Loc admissionsForRoom}"
                               FontSize="14" FontWeight="SemiBold"
                               Margin="0,12,0,6"/>

                    <!-- Admissions list for the SelectedRoom -->
                    <DataGrid Grid.Row="4"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              ItemsSource="{Binding Admissions}"
                              SelectedItem="{Binding SelectedAdmission}">
                      <DataGrid.Columns>
                        <DataGridTextColumn Header="{loc:Loc patient}"
                                            Binding="{Binding patient_umcnNavigation.name}"
                                            Width="1*"/>
                        <DataGridTextColumn Header="{loc:Loc admitted}"
                                            Binding="{Binding admission_date}"
                                            Width="*"/>
                        <DataGridTextColumn Header="{loc:Loc discharged}"
                                            Binding="{Binding discharge_date}"
                                            Width="*"/>
                      </DataGrid.Columns>
                    </DataGrid>
                  </Grid>
            </materialDesign:Card>

            <!-- RIGHT: Admission form -->
            <materialDesign:Card Grid.Column="1"
                     Padding="20"
                     Margin="5,0,10,0"
                     UniformCornerRadius="12"
                     materialDesign:ElevationAssist.Elevation="Dp8"
                     >

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="{loc:Loc admission}"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                                    
                                    

                                    <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="{loc:Loc admitDate}"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                    materialDesign:HintAssist.IsFloating="False"
                                                    Margin="0,0,5,10"
                                                    IsEnabled="{Binding IsControlsEnabled}"
                                                    SelectedDate="{Binding SelectedAdmission.admission_date, Mode=TwoWay, Converter={StaticResource DateConverter}}"/>
                                        <DatePicker Grid.Column="1"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="{loc:Loc expectedDischarge}"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                    materialDesign:HintAssist.IsFloating="False"
                                                    Margin="0,0,0,10"
                                                    IsEnabled="{Binding IsControlsEnabled}"
                                                    SelectedDate="{Binding SelectedAdmission.discharge_date, Mode=TwoWay, Converter={StaticResource DateConverter}}"/>
                                    </Grid>

                                    

                                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             materialDesign:HintAssist.Hint="{loc:Loc notes}"
                                             Margin="0,0,0,10"
                                             IsEnabled="{Binding IsControlsEnabled}"
                                             Text="{Binding SelectedAdmission.reason, Mode=TwoWay}"/>
                                    <materialDesign:Snackbar Grid.Row="5"  Grid.Column="0"
                                                             MessageQueue="{Binding MessageQueue}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Bottom"
                                                             HorizontalContentAlignment="Center"
                                                             Padding="0"
                                                             Background="{DynamicResource MaterialDesignPaper}"
                                                             Foreground="{DynamicResource MaterialDesignBody}"
                                    >
                                        <materialDesign:Snackbar.Resources>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            </Style>
                                        </materialDesign:Snackbar.Resources>
                                    </materialDesign:Snackbar>
                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button IsEnabled="{Binding IsControlsEnabled}" Content="{loc:Loc cancelBtn}" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding CancelAdmissionCommand}"/>
                                        <Button Content="{loc:Loc saveBtn}"  IsEnabled="{Binding IsControlsEnabled}"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0" Command="{Binding SaveAdmissionCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
            </materialDesign:Card>

        </Grid>
    </DockPanel>
</UserControl>
