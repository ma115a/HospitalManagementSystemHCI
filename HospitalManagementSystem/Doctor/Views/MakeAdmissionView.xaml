<UserControl x:Class="HospitalManagementSystem.Doctor.Views.MakeAdmissionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d">

    <!-- ESC to go back -->
    <UserControl.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{Binding DataContext.GoToDashboardCommand,
                                      RelativeSource={RelativeSource AncestorType=Window}}"/>
    </UserControl.InputBindings>

    <DockPanel>

        <!-- BACK BAR -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="GoToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Dashboard"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- TOP TOOLBAR (responsive grid) -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>            <!-- New -->
                    <ColumnDefinition Width="Auto"/>            <!-- Discharge -->
                    <ColumnDefinition Width="16"/>              <!-- spacer -->
                    <ColumnDefinition Width="Auto"/>            <!-- magnify -->
                    <ColumnDefinition Width="3*" MinWidth="200"/> <!-- search grows -->
                    <ColumnDefinition Width="16"/>              <!-- spacer -->
                    <ColumnDefinition Width="2*" MinWidth="140"/> <!-- From -->
                    <ColumnDefinition Width="2*" MinWidth="140"/> <!-- To -->
                    <ColumnDefinition Width="Auto"/>            <!-- Status lbl -->
                    <ColumnDefinition Width="1.5*" MinWidth="140"/> <!-- Status filter -->
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="New Admission"
                        Style="{DynamicResource MaterialDesignFlatButton}"/>
                <Button Grid.Column="1" Content="Discharge"
                        Margin="8,0,0,0"
                        Style="{DynamicResource MaterialDesignFlatButton}"/>


                <materialDesign:PackIcon Grid.Column="3" Kind="Magnify"
                                         Height="20" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox Grid.Column="4"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="Search admissions (room, dept, status)"
                         materialDesign:HintAssist.IsFloating="False"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                <DatePicker Grid.Column="6"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="From date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
                <DatePicker Grid.Column="7" Margin="8,0,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="To date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>

                <TextBlock Grid.Column="8" Text="Status:"
                           VerticalAlignment="Center" Margin="12,0,6,0"
                           Foreground="{DynamicResource MaterialDesign.Brush.OnSurfaceVariant}"/>
                <ComboBox Grid.Column="9"
                          ItemsSource="{Binding AdmissionStatuses}"
                          SelectedItem="{Binding SelectedStatusFilter}"
                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="All statuses"
                          materialDesign:HintAssist.IsFloating="False"/>
            </Grid>
        </Border>

        <!-- PATIENT BANNER -->
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4" DockPanel.Dock="Top" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
        <local:PatientBasicInfo/>
            
        </materialDesign:Card>

        <!-- MAIN: LIST (left) / FORM (right) -->
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: Admissions list -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="20"
                                 UniformCornerRadius="12"
                                 Margin="10,0,5,0"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Admissions" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,17"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnSurface}" />

                    <DataGrid Grid.Row="1"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              Margin="10,0"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Admissions}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedAdmission, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Admit Date" Binding="{Binding AdmitDate, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Department" Binding="{Binding Department}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Room" Binding="{Binding Room}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Bed" Binding="{Binding Bed}" Width="Auto"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Status" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- RIGHT: Admission form -->
            <materialDesign:Card Grid.Column="1"
                     Padding="20"
                     Margin="5,0,10,0"
                     UniformCornerRadius="12"
                     materialDesign:ElevationAssist.Elevation="Dp8"
                     >

                <!-- Scroll when the window is too small -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              CanContentScroll="True"
                              Focusable="False">
            
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
            
                        <!-- Make row 6 star so Notes grows/shrinks -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- 0: title -->
                            <RowDefinition Height="Auto"/>  <!-- 1: admit / expected discharge -->
                            <RowDefinition Height="Auto"/>  <!-- 2: dept / room -->
                            <RowDefinition Height="Auto"/>  <!-- 3: bed / type -->
                            <RowDefinition Height="Auto"/>  <!-- 4: attending -->
                            <RowDefinition Height="Auto"/>  <!-- 5: reason/diagnosis -->
                            <RowDefinition Height="*"/>     <!-- 6: notes (grows/shrinks) -->
                            <RowDefinition Height="Auto"/>  <!-- 7: buttons -->
                        </Grid.RowDefinitions>
            
                        <TextBlock Grid.ColumnSpan="2" Text="Admission Details"
                                   FontSize="16" FontWeight="SemiBold" Margin="0,0,0,17"/>
            
                        <!-- Dates -->
                        <DatePicker Grid.Row="1" Grid.Column="0"
                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                    materialDesign:HintAssist.Hint="Admit date"
                                    materialDesign:HintAssist.IsFloating="False"
                                    Margin="0,0,8,10"
                                    SelectedDate="{Binding DraftAdmission.AdmitDate, Mode=TwoWay}"/>
            
                        <DatePicker Grid.Row="1" Grid.Column="1"
                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                    materialDesign:HintAssist.Hint="Expected discharge"
                                    materialDesign:HintAssist.IsFloating="False"
                                    Margin="8,0,0,10"
                                    SelectedDate="{Binding DraftAdmission.ExpectedDischarge, Mode=TwoWay}"/>
            
                        <!-- Department / Room -->
                        <ComboBox Grid.Row="2" Grid.Column="0"
                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Department"
                                  materialDesign:HintAssist.IsFloating="False"
                                  Margin="0,0,8,10"
                                  ItemsSource="{Binding Departments}"
                                  SelectedItem="{Binding DraftAdmission.Department, Mode=TwoWay}"/>
            
                        <ComboBox Grid.Row="2" Grid.Column="1"
                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Room"
                                  materialDesign:HintAssist.IsFloating="False"
                                  Margin="8,0,0,10"
                                  ItemsSource="{Binding Rooms}"
                                  SelectedItem="{Binding DraftAdmission.Room, Mode=TwoWay}"/>
            
                        <!-- Bed / Admission Type -->
                        <ComboBox Grid.Row="3" Grid.Column="0"
                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Bed"
                                  materialDesign:HintAssist.IsFloating="False"
                                  Margin="0,0,8,10"
                                  ItemsSource="{Binding Beds}"
                                  SelectedItem="{Binding DraftAdmission.Bed, Mode=TwoWay}"/>
            
                        <ComboBox Grid.Row="3" Grid.Column="1"
                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Admission type"
                                  materialDesign:HintAssist.IsFloating="False"
                                  Margin="8,0,0,10"
                                  ItemsSource="{Binding AdmissionTypes}"
                                  SelectedItem="{Binding DraftAdmission.AdmissionType, Mode=TwoWay}"/>
            
                        <!-- Attending doctor (editable) -->
                        <ComboBox Grid.Row="4" Grid.ColumnSpan="2"
                                  IsEditable="True" StaysOpenOnEdit="True" IsTextSearchEnabled="False"
                                  ItemsSource="{Binding Doctors}"
                                  Text="{Binding DraftAdmission.AttendingDoctor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                  materialDesign:HintAssist.Hint="Attending doctor"
                                  materialDesign:HintAssist.IsFloating="False"
                                  Margin="0,0,0,10"/>
            
                        <!-- Reason / Diagnosis -->
                        <TextBox Grid.Row="5" Grid.ColumnSpan="2"
                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                 materialDesign:HintAssist.Hint="Reason / Diagnosis"
                                 materialDesign:HintAssist.IsFloating="False"
                                 Margin="0,0,0,10"
                                 Text="{Binding DraftAdmission.Reason, Mode=TwoWay}"/>
            
                        <!-- Notes (grows/shrinks; scrolls when tight) -->
                        <TextBox Grid.Row="6" Grid.ColumnSpan="2"
                                 AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalAlignment="Stretch" MinHeight="100"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                 materialDesign:HintAssist.Hint="Notes"
                                 materialDesign:HintAssist.IsFloating="False"
                                 Margin="0,0,0,10"
                                 Text="{Binding DraftAdmission.Notes, Mode=TwoWay}"/>
            
                        <!-- Buttons -->
                        <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}" />
                            <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" />
                            <Button Content="Discharge" Margin="8,0,0,0"
                                    Style="{DynamicResource MaterialDesignRaisedButton}" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </materialDesign:Card>

        </Grid>
    </DockPanel>
</UserControl>
