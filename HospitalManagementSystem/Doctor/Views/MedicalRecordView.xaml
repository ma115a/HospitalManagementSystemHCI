<UserControl x:Class="HospitalManagementSystem.Doctor.Views.MedicalRecordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d">

    <!-- Optional: ESC to go back -->
    <UserControl.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{Binding DataContext.GoToDashboardCommand,
                                      RelativeSource={RelativeSource AncestorType=Window}}"/>
    </UserControl.InputBindings>

    <DockPanel>

        <!-- BACK BAR -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <StackPanel Orientation="Horizontal">
                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                        Click="GoToDashboard_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Back to Dashboard"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- TOP “TOOLBAR” (responsive grid) -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource MaterialDesign.Brush.Surface}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>          <!-- + button -->
                    <ColumnDefinition Width="Auto"/>          <!-- Edit button -->
                    <ColumnDefinition Width="Auto"/>          <!-- Delete button -->
                    <ColumnDefinition Width="Auto"/>          <!-- magnify icon -->
                    <ColumnDefinition Width="3*" MinWidth="180"/>  <!-- SEARCH grows most -->
                    <ColumnDefinition Width="2*" MinWidth="140"/>  <!-- FROM date grows -->
                    <ColumnDefinition Width="2*" MinWidth="140"/>  <!-- TO date grows -->
                </Grid.ColumnDefinitions>

                <!-- Buttons -->
                <Button Grid.Column="0" Content="+" FontSize="24"
                        Style="{DynamicResource MaterialDesignFloatingActionMiniButton}" />
                <Button Grid.Column="1" Content="Edit"
                        Margin="8,0,0,0"
                        Style="{DynamicResource MaterialDesignFlatButton}" />
                <Button Grid.Column="2" Content="Delete"
                        Margin="8,0,0,0"
                        Foreground="Red"
                        Style="{DynamicResource MaterialDesignFlatButton}" />

                <!-- Search -->
                <materialDesign:PackIcon Grid.Column="3" Kind="Magnify"
                                         Height="20" VerticalAlignment="Center" Margin="8,0,6,0"/>
                <TextBox Grid.Column="4"
                         HorizontalAlignment="Stretch"
                         materialDesign:HintAssist.Hint="Search records"
                         materialDesign:HintAssist.IsFloating="False"
                         materialDesign:TextFieldAssist.HasClearButton="True"
                         Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>

                <!-- Date pickers -->
                <DatePicker Grid.Column="5"
                            HorizontalAlignment="Stretch"
                            Margin="8,0,0,0"
                            materialDesign:HintAssist.Hint="From date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
                <DatePicker Grid.Column="6" 
                            HorizontalAlignment="Stretch"
                            Margin="8,0,0,0"
                            materialDesign:HintAssist.Hint="To date"
                            materialDesign:HintAssist.IsFloating="False"
                            Style="{DynamicResource MaterialDesignOutlinedDatePicker}"/>
            </Grid>
        </Border>

        <!-- PATIENT BANNER -->
        <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4" DockPanel.Dock="Top" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
            <local:PatientBasicInfo/>
        </materialDesign:Card>

        <!-- MAIN: LIST (left) / DETAILS (right) -->
        <Grid Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <!-- RECORDS LIST -->
            <materialDesign:Card Grid.Column="0"
                                 Padding="20"
                                 UniformCornerRadius="12"
                                 Margin="10,0,5,0"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Medical Records" 
                               FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,17"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnSurface}" />

                    <DataGrid Grid.Row="1"
                              Style="{DynamicResource MaterialDesignDataGrid}"
                              Margin="10,0"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Records}"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedRecord, Mode=TwoWay}">
                        <DataGrid.Columns>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                            <DataGridTextColumn CellStyle="{DynamicResource MaterialDesignDataGridCell}"
                                                Header="Doctor" Binding="{Binding Doctor}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </materialDesign:Card>

            <!-- DETAILS -->
            <materialDesign:Card Grid.Column="1"
                                 Padding="20"
                                 Margin="5,0,10,0"
                                 UniformCornerRadius="12"
                                 materialDesign:ElevationAssist.Elevation="Dp8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Record Details"
                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,17"/>

                    <DatePicker Grid.Row="1" Grid.ColumnSpan="2"
                                Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                materialDesign:HintAssist.Hint="Date"
                                materialDesign:HintAssist.IsFloating="False"
                                Margin="0,0,5,10"
                                SelectedDate="{Binding SelectedRecord.Date, Mode=TwoWay}"/>

                    <TextBox Grid.Row="2" Grid.ColumnSpan="2"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Diagnosis"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="0,0,0,10"
                             Text="{Binding SelectedRecord.Diagnosis, Mode=TwoWay}"/>

                    <TextBox Grid.Row="3" Grid.ColumnSpan="2"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Symptoms / Notes"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="0,0,0,10"
                             Text="{Binding SelectedRecord.Notes, Mode=TwoWay}"/>

                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                             materialDesign:HintAssist.Hint="Treatment"
                             materialDesign:HintAssist.IsFloating="False"
                             Margin="0,0,0,10"
                             Text="{Binding SelectedRecord.Treatment, Mode=TwoWay}"/>

                    <StackPanel Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                        <Button Content="Cancel" Margin="0, 0, 5, 0" Style="{DynamicResource MaterialDesignFlatButton}" />
                        <Button Content="Save" Margin="5, 0, 9, 0" Style="{DynamicResource MaterialDesignRaisedButton}" />
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </DockPanel>
</UserControl>
