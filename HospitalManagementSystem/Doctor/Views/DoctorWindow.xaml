<Window x:Class="HospitalManagementSystem.Doctor.Views.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:HospitalManagementSystem.Doctor.Views"
        xmlns:vm="clr-namespace:HospitalManagementSystem.Doctor.ViewModels"
        xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
        mc:Ignorable="d"
        Title="Doctor Dashboard" Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DoctorHomePageViewModel}">
            <views:DoctorHomePage></views:DoctorHomePage>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MedicalRecordViewViewModel}">
            <views:MedicalRecordView></views:MedicalRecordView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PrescriptionViewViewModel}">
            <views:PrescriptionView></views:PrescriptionView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LaboratoryResultsViewViewModel}">
            <views:LaboratoryResultsView></views:LaboratoryResultsView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LaboratoryRequestsViewViewModel}">
            <views:LaboratoryRequestsView></views:LaboratoryRequestsView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MakeAdmissionViewViewModel}">
            <views:MakeAdmissionView></views:MakeAdmissionView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DoctorSurgeriesViewViewModel}">
            <views:SurgeriesView></views:SurgeriesView>
        </DataTemplate>
    </Window.Resources>


    <DockPanel>
        <!-- <views:DoctorTopPanel DockPanel.Dock="Top"></views:DoctorTopPanel> -->
        
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <!-- Hospital Icon -->
                <materialDesign:PackIcon 
                                        Kind="HospitalBuilding" 
                                        Width="36" 
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>


                <!-- Hospital Name -->
                <StackPanel Grid.Column="1" 
                            Margin="12,0,0,0" 
                            VerticalAlignment="Center">
                    
                    <TextBlock Text="Hospital Management System" 
                               d:Text="City General Hospital (Preview)"
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    
                    <TextBlock Text="{loc:Loc doctorTitle}" 
                               FontSize="12" 
                               Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>


                <!-- Logged-in Doctor -->
                <Border Grid.Column="2" 
                        Padding="12,8" 
                        CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        
                        <materialDesign:PackIcon Kind="Stethoscope" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Employee.name}" 
                                       d:Text="Dr. Jane Doe"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            
                            <TextBlock Text="{Binding Employee.username}" 
                                       d:Text="@jdoe"
                                       FontSize="14" 
                                       Opacity=".9"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button Grid.Column="3"
                        Style="{StaticResource MaterialDesignIconButton}"
                    Click="SettingsButton_Click">
                    <materialDesign:PackIcon Kind="Cog" 
                                             Width="20" 
                                             Height="20"
                                             Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <Button.ContextMenu>
                        
                        <ContextMenu Opened="SettingsMenu_Opened">
                            <!-- Languages -->
                            <MenuItem Header="🌐 Language">
                                <MenuItem Header="English" Tag="en" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Srpski" Tag="sr" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Deutsch" Tag="de" Click="LanguageMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Theme -->
                            <MenuItem Header="🎨 Theme">
                                <MenuItem Header="Light" Tag="Light" Click="ThemeMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Dark" Tag="Dark" Click="ThemeMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Primary Colors -->
                            <MenuItem Header="🎨 Primary Color">
                                <MenuItem Header="Indigo" Tag="#3F51B5" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Blue" Tag="#2196F3" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Green" Tag="#4CAF50" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>
        
        


        <materialDesign:Transitioner x:Name="ContentSwitcher" Padding="40"  SelectedIndex="{Binding CurrentSlideIndex}">
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding HomeVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding MedicalVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding PrescriptionVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding LabResultVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding LabRequestVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding AdmissionVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding SurgeriesVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </DockPanel>
</Window>
