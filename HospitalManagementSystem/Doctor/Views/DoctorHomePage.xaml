<UserControl x:Class="HospitalManagementSystem.Doctor.Views.DoctorHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"

             mc:Ignorable="d">
    <!-- <materialDesign:TransitionerSlide> -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              Background="{DynamicResource MaterialDesignPaper}"
                              >
                    <Grid Margin="10 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="125"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0"
                                                   Kind="AccountSearch"
                                                   Width="24" Height="24"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Right"
                                                   Foreground="{DynamicResource MaterialDesign.Brush.Primary}" Margin="60,0,60,0"/>

                            <ComboBox Grid.Column="1"
                                    IsTextSearchEnabled="False"
                                    materialDesign:HintAssist.Hint="{loc:Loc searchPatient}"
                                    materialDesign:HintAssist.IsFloating="False"
                                    Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                    ItemsSource="{Binding Patients}"
                                    SelectedItem="{Binding SelectedPatient}"
                                    MinWidth="240"
                                    MaxWidth="800" Height="50" Margin="0,0,145,0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding name}"></TextBlock>
                                        <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                        <TextBlock Text="{Binding umcn}"></TextBlock>
                                        <TextBlock Text=" )"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp4" Grid.Row="1" Margin="10" VerticalContentAlignment="Center" UniformCornerRadius="12" Padding="5">
                <local:PatientBasicInfo/>
            </materialDesign:Card>




            <UniformGrid Grid.Row="2" Columns="3" HorizontalAlignment="Stretch">
                            <!-- make all cards stretch to fill their cell -->
                            <UniformGrid.Resources>
                                <Style TargetType="materialDesign:Card">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </UniformGrid.Resources>

                            <!-- View Medical Records -->
                            <materialDesign:Card Margin="20" Padding="20"
                       UniformCornerRadius="12"
                       materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- header -->
                                        <RowDefinition Height="*"/>
                                        <!-- description stretches -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- button -->
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="FileDocumentOutline" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                   Text="{loc:Loc doctorMedicalRecordsTitle}"
                   FontWeight="SemiBold" FontSize="16"
                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <!-- Description -->
                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                 Text="{loc:Loc doctorMedicalRecordsContent}"
                 FontSize="14" TextWrapping="Wrap"/>

                                    <!-- Action -->
                                    <Button Grid.Row="2" Margin="0,12,0,0"
              Content="{loc:Loc adminCardButton}" Width="100" Height="30"
              Command="{Binding DataContext.GoToMedicalRecordCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              materialDesign:ElevationAssist.Elevation="Dp2"
              Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Make Prescription -->
                            <materialDesign:Card Margin="20" Padding="20"
                       UniformCornerRadius="12"
                       materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="Pill" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                   Text="{loc:Loc doctorPrescriptionTitle}"
                   FontWeight="SemiBold" FontSize="16"
                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                 Text="{loc:Loc doctorPrescriptionContent}"
                 FontSize="14" TextWrapping="Wrap"/>

                                    <Button Grid.Row="2" Margin="0,12,0,0"
              Content="{loc:Loc adminCardButton}" Width="100" Height="30"
              materialDesign:ElevationAssist.Elevation="Dp2"
              Command="{Binding DataContext.GoToPrescriptionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Laboratory Results -->
                            <!--<materialDesign:Card Margin="20" Padding="20"
                       UniformCornerRadius="12"
                       materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="ClipboardPulseOutline" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                   Text="{loc:Loc doctorLaboratoryTitle}"
                   FontWeight="SemiBold" FontSize="16"
                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                 Text="{loc:Loc doctorLaboratoryContent}"
                 FontSize="14" TextWrapping="Wrap"/>

                                    <Button Grid.Row="2" Margin="0,12,0,0"
              Content="{loc:Loc adminCardButton}" Width="100" Height="30"
              Command="{Binding DataContext.GoToLaboratoryResultCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              materialDesign:ElevationAssist.Elevation="Dp2"
              Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>-->

                            <!-- Request Laboratory -->
                            <materialDesign:Card Margin="20" Padding="20"
                                                 UniformCornerRadius="12"
                                                 materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="FlaskOutline" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                                                   Text="Request Laboratory"
                                                   FontWeight="SemiBold" FontSize="16"
                                                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                                               Text="Order lab tests and track their status."
                                               FontSize="14" TextWrapping="Wrap"/>

                                    <Button Grid.Row="2" Margin="0,12,0,0"
                                            Content="Open" Width="100" Height="30"
                                            materialDesign:ElevationAssist.Elevation="Dp2"
                                            Command="{Binding DataContext.GoToLaboratoryRequestsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Make Admission -->
                            <materialDesign:Card Margin="20" Padding="20"
                       UniformCornerRadius="12"
                       materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="Bed" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                   Text="{loc:Loc doctorAdmissionTitle}"
                   FontWeight="SemiBold" FontSize="16"
                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                 Text="{loc:Loc doctorAdmissionContent}"
                 FontSize="14" TextWrapping="Wrap"/>

                                    <Button Grid.Row="2" Margin="0,12,0,0"
              Content="{loc:Loc adminCardButton}" Width="100" Height="30"
              materialDesign:ElevationAssist.Elevation="Dp2"
          Command="{Binding DataContext.GoToAdmissionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- View Surgeries -->
                            <materialDesign:Card Margin="20" Padding="20"
                       UniformCornerRadius="12"
                       materialDesign:ElevationAssist.Elevation="Dp8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <materialDesign:PackIcon Grid.Column="0" Kind="StanleyKnife" Width="32" Height="32" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Margin="10,0,0,0"
                   Text="{loc:Loc doctorSurgeriesTitle}"
                   FontWeight="SemiBold" FontSize="16"
                   TextWrapping="Wrap" VerticalAlignment="Center"/>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Margin="0,10,0,0"
                 Text="{loc:Loc doctorSurgeriesContent}"
                 FontSize="14" TextWrapping="Wrap"/>

                                    <Button Grid.Row="2" Margin="0,12,0,0"
              Content="{loc:Loc adminCardButton}" Width="100" Height="30"
          Command="{Binding DataContext.GoToSurgeriesCommand, RelativeSource={RelativeSource AncestorType=Window}}"
              materialDesign:ElevationAssist.Elevation="Dp2"
              Style="{DynamicResource MaterialDesignRaisedLightButton}"/>
                                </Grid>
                            </materialDesign:Card>

                        </UniformGrid>





                    </Grid>
                </ScrollViewer>
            <!-- </materialDesign:TransitionerSlide> -->
</UserControl>
