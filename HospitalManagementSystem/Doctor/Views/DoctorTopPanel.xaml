<UserControl x:Class="HospitalManagementSystem.Doctor.Views.DoctorTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
             mc:Ignorable="d"
             >
    <Border Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <!-- Hospital Icon -->
                <materialDesign:PackIcon 
                                        Kind="HospitalBuilding" 
                                        Width="36" 
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>


                <!-- Hospital Name -->
                <StackPanel Grid.Column="1" 
                            Margin="12,0,0,0" 
                            VerticalAlignment="Center">
                    
                    <TextBlock Text="Boljnica" 
                               d:Text="City General Hospital (Preview)"
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    
                    <TextBlock Text="{loc:Loc doctorTitle}" 
                               FontSize="12" 
                               Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>


                <!-- Logged-in Doctor -->
                <Border Grid.Column="2" 
                        Padding="12,8" 
                        CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        
                        <materialDesign:PackIcon Kind="Stethoscope" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding Employee.name}" 
                                       d:Text="Dr. Jane Doe"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            
                            <TextBlock Text="{Binding Employee.username}" 
                                       d:Text="@jdoe"
                                       FontSize="14" 
                                       Opacity=".9"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button Grid.Column="3"
                        Style="{StaticResource MaterialDesignIconButton}"
                    Click="SettingsButton_Click">
                    <materialDesign:PackIcon Kind="Cog" 
                                             Width="20" 
                                             Height="20"
                                             Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <Button.ContextMenu>
                        
                        <ContextMenu Opened="SettingsMenu_Opened">
                            <!-- Languages -->
                            <MenuItem Header="🌐 Language">
                                <MenuItem Header="English" Tag="en" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Srpski" Tag="sr" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Deutsch" Tag="de" Click="LanguageMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Theme -->
                            <MenuItem Header="🎨 Theme">
                                <MenuItem Header="Light" Tag="Light" Click="ThemeMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Dark" Tag="Dark" Click="ThemeMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Primary Colors -->
                            <MenuItem Header="🎨 Primary Color">
                                <MenuItem Header="Indigo" Tag="#3F51B5" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Blue" Tag="#2196F3" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Green" Tag="#4CAF50" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>
</UserControl>
