<UserControl x:Class="HospitalManagementSystem.Doctor.Views.DoctorTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <Border Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <!-- Hospital Icon -->
                <materialDesign:PackIcon 
                                        Kind="HospitalBuilding" 
                                        Width="36" 
                                        Height="36"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>


                <!-- Hospital Name -->
                <StackPanel Grid.Column="1" 
                            Margin="12,0,0,0" 
                            VerticalAlignment="Center">
                    
                    <TextBlock Text="Boljnica" 
                               d:Text="City General Hospital (Preview)"
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    
                    <TextBlock Text="Hospital Management System" 
                               FontSize="12" 
                               Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>


                <!-- Logged-in Doctor -->
                <Border Grid.Column="2" 
                        Padding="12,8" 
                        CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        
                        <materialDesign:PackIcon Kind="Stethoscope" 
                                                 Width="20" 
                                                 Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="dr Mihajlo Vukajlovic" 
                                       d:Text="Dr. Jane Doe"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            
                            <TextBlock Text="malisa" 
                                       d:Text="@jdoe"
                                       FontSize="14" 
                                       Opacity=".9"
                                       TextAlignment="Center"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
</UserControl>
