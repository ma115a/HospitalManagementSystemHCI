<UserControl x:Class="HospitalManagementSystem.Surgeon.Views.SurgeonHomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem.Surgeon"
             mc:Ignorable="d"
             >
    <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        

                        <UniformGrid Grid.Row="1" Columns="3">
                            <UniformGrid.Resources>
                                <Style TargetType="materialDesign:Card">
                                    <Setter Property="Padding" Value="20"/>
                                    <Setter Property="UniformCornerRadius" Value="12"/>
                                    <Setter Property="Margin" Value="12"/>
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Style>
                            </UniformGrid.Resources>

                            <!-- My Surgeries -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarClock" Width="32" Height="32"/>
                                        <TextBlock Text="My Surgeries" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Review and edit upcoming cases; manage team checklists."
                                               TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="140"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Click="Surgeries_Click"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Schedule Surgery -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarPlus" Width="32" Height="32"/>
                                        <TextBlock Text="Schedule Surgery" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Create a new case with patient, OR, and timing."
                                               TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="160"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Click="ScheduleSurgery_Click"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- History -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="History" Width="32" Height="32"/>
                                        <TextBlock Text="Surgery History" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Browse past cases and post-op outcomes."
                                               TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="140"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Click="SurgeriesHistory_Click"/>
                                </Grid>
                            </materialDesign:Card>
                        </UniformGrid>
                    </Grid>
                </ScrollViewer>
</UserControl>
