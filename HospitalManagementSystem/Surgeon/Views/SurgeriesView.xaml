<UserControl x:Class="HospitalManagementSystem.Surgeon.Views.SurgeriesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem.Surgeon"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back -->
                    <Border DockPanel.Dock="Top"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding GoToDashboardCommand}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- List -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Upcoming Surgeries"
                                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <!-- Filters -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker Grid.Column="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="Date"
                                                SelectedDate="{Binding FilterDate}"/>
                                    <ComboBox Grid.Column="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="OR / Room"
                                              ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}"/>
                                    <ComboBox Grid.Column="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Status"
                                              ItemsSource="{Binding SurgeryStatuses}" SelectedItem="{Binding SelectedStatus}"/>
                                </Grid>

                                <DataGrid Grid.Row="2" Margin="0,8,0,0"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Surgeries}"
                                          SelectedItem="{Binding SelectedSurgery}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="Auto"/>
                                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="2*"/>
                                        <DataGridTextColumn Header="Procedure" Binding="{Binding Procedure}" Width="2*"/>
                                        <DataGridTextColumn Header="OR" Binding="{Binding Room}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Details (Tabs) -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             ClipToBounds="True">
                            <TabControl>
                                <!-- DETAILS TAB -->
                                <TabItem Header="Details">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>  <!-- title -->
                                                <RowDefinition Height="Auto"/>  <!-- date/time -->
                                                <RowDefinition Height="Auto"/>  <!-- duration / room -->
                                                <RowDefinition Height="Auto"/>  <!-- patient -->
                                                <RowDefinition Height="Auto"/>  <!-- procedure -->
                                                <RowDefinition Height="Auto"/>  <!-- status -->
                                                <RowDefinition Height="*"/>     <!-- notes -->
                                                <RowDefinition Height="Auto"/>  <!-- buttons -->
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.ColumnSpan="2" Text="Surgery Details"
                                                       FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                            <!-- Date / Time -->
                                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <DatePicker Grid.Column="0"
                                                            Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                            materialDesign:HintAssist.Hint="Date"
                                                            SelectedDate="{Binding SelectedSurgery.Date}"/>
                                                <TextBox Grid.Column="1"
                                                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                         materialDesign:HintAssist.Hint="Time (HH:mm)"
                                                         Text="{Binding SelectedSurgery.Time}"/>
                                                <!-- Swap to a TimePicker if you use MahApps or MaterialDesignExtensions -->
                                            </Grid>

                                            <!-- Duration / OR room -->
                                            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0"
                                                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                         materialDesign:HintAssist.Hint="Duration (min)"
                                                         Text="{Binding SelectedSurgery.Duration}"/>
                                                <ComboBox Grid.Column="1"
                                                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                          materialDesign:HintAssist.Hint="OR / Room"
                                                          ItemsSource="{Binding Rooms}"
                                                          SelectedItem="{Binding SelectedSurgery.Room}"/>
                                            </Grid>

                                            <!-- Patient -->
                                            <ComboBox Grid.Row="3" Grid.ColumnSpan="2"
                                                      IsEditable="True" StaysOpenOnEdit="True"
                                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                      materialDesign:HintAssist.Hint="Patient"
                                                      ItemsSource="{Binding Patients}"
                                                      Text="{Binding SelectedSurgery.PatientName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                            <!-- Procedure -->
                                            <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                                     Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                     materialDesign:HintAssist.Hint="Procedure"
                                                     Text="{Binding SelectedSurgery.Procedure}"/>

                                            <!-- Status -->
                                            <ComboBox Grid.Row="5" Grid.ColumnSpan="2"
                                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                      materialDesign:HintAssist.Hint="Status"
                                                      ItemsSource="{Binding SurgeryStatuses}"
                                                      SelectedItem="{Binding SelectedSurgery.Status}"/>

                                            <!-- Notes -->
                                            <TextBox Grid.Row="6" Grid.ColumnSpan="2"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                     VerticalAlignment="Stretch" MinHeight="140"
                                                     Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                     materialDesign:HintAssist.Hint="Notes"
                                                     Text="{Binding SelectedSurgery.Notes}"/>

                                            <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                                                        Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                                <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- TEAM TAB -->
                                <TabItem Header="Team">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.ColumnSpan="2" Text="Assign Nurses"
                                                       FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="Available nurses" FontWeight="SemiBold"/>
                                                    <ListBox ItemsSource="{Binding Nurses}"
                                                             SelectedItem="{Binding SelectedNurse}"
                                                             MinHeight="180"/>
                                                    <Button Content="Assign"
                                                            Style="{DynamicResource MaterialDesignRaisedButton}"
                                                            Margin="0,8,0,0"
                                                            Command="{Binding AssignNurseCommand}"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Assigned nurses" FontWeight="SemiBold"/>
                                                    <ListBox ItemsSource="{Binding AssignedNurses}"
                                                             SelectedItem="{Binding SelectedAssignedNurse}"
                                                             MinHeight="180"/>
                                                    <Button Content="Remove"
                                                            Style="{DynamicResource MaterialDesignFlatButton}"
                                                            Margin="0,8,0,0"
                                                            Command="{Binding RemoveAssignedNurseCommand}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- PRE-OP TAB -->
                                <TabItem Header="Pre-op">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Pre-operative Checklist"
                                                       FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                            <CheckBox Grid.Row="1" Content="Consent signed"
                                                      IsChecked="{Binding SelectedSurgery.PreopConsent}"/>
                                            <CheckBox Grid.Row="2" Content="NPO confirmed"
                                                      IsChecked="{Binding SelectedSurgery.PreopNPO}"/>
                                            <CheckBox Grid.Row="3" Content="Required labs reviewed"
                                                      IsChecked="{Binding SelectedSurgery.PreopLabs}"/>

                                            <TextBox Grid.Row="4"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                     VerticalAlignment="Stretch" MinHeight="120"
                                                     Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                     materialDesign:HintAssist.Hint="Additional pre-op notes"
                                                     Text="{Binding SelectedSurgery.PreopNotes}"/>

                                            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                                <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>

                                <!-- POST-OP TAB -->
                                <TabItem Header="Post-op">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Post-operative Notes"
                                                       FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                            <ComboBox Grid.Row="1"
                                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                      materialDesign:HintAssist.Hint="Outcome"
                                                      ItemsSource="{Binding SurgeryOutcomes}"
                                                      SelectedItem="{Binding SelectedSurgery.Outcome}"/>

                                            <TextBox Grid.Row="2"
                                                     AcceptsReturn="True" TextWrapping="Wrap"
                                                     VerticalAlignment="Stretch" MinHeight="160"
                                                     Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                     materialDesign:HintAssist.Hint="Complications / Post-op notes"
                                                     Text="{Binding SelectedSurgery.PostopNotes}"/>

                                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                                <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
