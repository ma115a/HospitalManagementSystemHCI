<UserControl x:Class="HospitalManagementSystem.Admin.Views.AdminHomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
             xmlns:viewModels="clr-namespace:HospitalManagementSystem.Admin.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:AdminWindowViewModel}"
             mc:Ignorable="d"
             >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        

                        <UniformGrid Grid.Row="1" Columns="2">
                            <!-- Reusable card style -->
                            <UniformGrid.Resources>
                                <Style TargetType="materialDesign:Card">
                                    <Setter Property="Padding" Value="20"/>
                                    <Setter Property="UniformCornerRadius" Value="12"/>
                                    <Setter Property="Margin" Value="12"/>
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Style>
                            </UniformGrid.Resources>

                            <!-- Manage User Profiles -->
                            <materialDesign:Card Padding="20" Margin="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountGroup" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc adminManageProfilesTitle}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Margin="0,12,0,0"
                                               Text="{loc:Loc adminManageProfilesContent}"
                                               TextWrapping="Wrap" Opacity=".9"/>

                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Width="120" Margin="0,14,0,0"
                                            Command="{Binding DataContext.GoToManageUsersCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Manage Departments & Rooms -->
                            <materialDesign:Card Padding="20" Margin="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="OfficeBuildingMarkerOutline" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc adminDepartmentsTitle}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Margin="0,12,0,0"
                                               Text="{loc:Loc adminDepartmentsContent}"
                                               TextWrapping="Wrap" Opacity=".9"/>

                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Width="120" Margin="0,14,0,0"
                                            Command="{Binding DataContext.GoToDepartmentsRoomsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Manage Vehicles -->
                            <materialDesign:Card Padding="20" Margin="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Ambulance" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc adminVehiclesTitle}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Margin="0,12,0,0"
                                               Text="{loc:Loc adminVehiclesContent}"
                                               TextWrapping="Wrap" Opacity=".9"/>

                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Width="120" Margin="0,14,0,0"
                                            Command="{Binding DataContext.GoToVehiclesCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Medications & Inventory -->
                            <materialDesign:Card Padding="20" Margin="20">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PillMultiple" Width="32" Height="32"/>
                                        <TextBlock Text="{loc:Loc adminMedicationsTitle}" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="1" Margin="0,12,0,0"
                                               Text="{loc:Loc adminMedicationsContent}"
                                               TextWrapping="Wrap" Opacity=".9"/>

                                    <Button Grid.Row="2" Content="{loc:Loc adminCardButton}"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Width="120" Margin="0,14,0,0"
                                            Command="{Binding DataContext.GoToMedicationInventoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </Grid>
                            </materialDesign:Card>
                        </UniformGrid>
                    </Grid>
                </ScrollViewer>
</UserControl>
