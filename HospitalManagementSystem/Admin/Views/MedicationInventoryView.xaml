<UserControl x:Class="HospitalManagementSystem.Admin.Views.MedicationInventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Border DockPanel.Dock="Top"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="New Medication" Style="{DynamicResource MaterialDesignFlatButton}"/>
                            <Button Content="New Stock Entry" Style="{DynamicResource MaterialDesignFlatButton}"/>
                            <Button Content="Delete" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Medications -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Medications" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Medications}"
                                          SelectedItem="{Binding SelectedMedication}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="*"/>
                                        <DataGridTextColumn Header="Form" Binding="{Binding Form}" Width="*"/>
                                        <DataGridTextColumn Header="Strength" Binding="{Binding Strength}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Inventory -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Inventory" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Inventory}"
                                          SelectedItem="{Binding SelectedStock}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Medication" Binding="{Binding MedicationName}" Width="2*"/>
                                        <DataGridTextColumn Header="Department" Binding="{Binding Department}" Width="*"/>
                                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="*"/>
                                        <DataGridTextColumn Header="Expires" Binding="{Binding ExpiryDate, StringFormat=d}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
