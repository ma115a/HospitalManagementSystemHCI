<UserControl x:Class="HospitalManagementSystem.Admin.Views.UserProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
             xmlns:utils="clr-namespace:HospitalManagementSystem.Utils"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back bar -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding DataContext.GoToDashboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="{loc:Loc backToDashboard}"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Toolbar (no search) -->
                    <Border DockPanel.Dock="Top"
                            
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="{loc:Loc newBtn}"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewUserCommand}"/>
                            <Button Content="{loc:Loc editBtn}" IsEnabled="{Binding IsControls2Enabled}"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditUserCommand}"/>
                            <Button Content="{loc:Loc deleteBtn}" IsEnabled="{Binding IsControls2Enabled}" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeleteUserCommand}"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Users list -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Grid.Row="1"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          CanUserReorderColumns="False"
                                          CanUserDeleteRows="False"
                                          ItemsSource="{Binding Employees}"
                                          SelectedItem="{Binding SelectedEmployee}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{loc:Loc usernameGrid}" Binding="{Binding username}" Width="*"/>
                                        <DataGridTextColumn Header="{loc:Loc nameGrid}" Binding="{Binding name}" Width="2*"/>
                                        <DataGridTextColumn Header="{loc:Loc roleGrid}" Binding="{Binding Role}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="" Binding="{Binding active}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- User details -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid DataContext="{Binding SelectedEmployee}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="{loc:Loc userDetails}"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <TextBox Grid.Row="1" Grid.ColumnSpan="2"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc fullName}"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,0,10"
                                             Text="{Binding name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBox Grid.Row="2" Grid.Column="0"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc usernameBox}"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Name="UsernameTextBox"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,5,10"
                                             Text="{Binding username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <PasswordBox Grid.Row="2" Grid.Column="1"
                                                 materialDesign:HintAssist.Hint="{loc:Loc passwordBox}"
                                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                 materialDesign:HintAssist.IsFloating="False"
                                                 IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                 Name="PasswordTextBox"
                                                 Margin="5,0,0,10"
                                                 utils:PasswordBoxAssistant.BindPassword="True"
                                                 utils:PasswordBoxAssistant.BoundPassword="{Binding DataContext.Password, RelativeSource={RelativeSource AncestorType=UserControl} , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource MaterialDesignFilledPasswordBox}"/>

                                    <ComboBox Grid.Row="3" Grid.Column="0"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="{loc:Loc roleGrid}"
                                              
                                              materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                              materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                              materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                              materialDesign:HintAssist.IsFloating="False"
                                              Margin="0,0,5,10"
                                              SelectedValuePath="Content"
                                              Name="RoleBox"
                                              IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              SelectedValue="{Binding DataContext.SelectedRole, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBoxItem>Administrator</ComboBoxItem>
                                        <ComboBoxItem>Doctor</ComboBoxItem>
                                        <ComboBoxItem>Nurse</ComboBoxItem>
                                        <ComboBoxItem>Surgeon</ComboBoxItem>
                                        <ComboBoxItem>Lab Technician</ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox Grid.Row="3" Grid.Column="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="{loc:Loc departmentBox}"
                                              Margin="5,0,0,10"
                                              SelectedValuePath="Content"
                                              
                                              materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                              materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                              materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                              materialDesign:HintAssist.IsFloating="False"
                                              IsEnabled="{Binding DataContext.IsDepartmentEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              Name="DepartmentBox"
                                              SelectedValue="{Binding DataContext.SelectedDepartment ,Mode=TwoWay,RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged}">
                                        <ComboBoxItem>Cardiology</ComboBoxItem>
                                        <ComboBoxItem>Neurology</ComboBoxItem>
                                        <ComboBoxItem>Orthopedics</ComboBoxItem>
                                        <ComboBoxItem>Pediatrics</ComboBoxItem>
                                        <ComboBoxItem>Oncology</ComboBoxItem>
                                        <ComboBoxItem>Radiology</ComboBoxItem>
                                        <ComboBoxItem>Emergency</ComboBoxItem>
                                        <ComboBoxItem>Intensive Care Unit (ICU)</ComboBoxItem>
                                        <ComboBoxItem>Surgery</ComboBoxItem>
                                        <ComboBoxItem>Laboratory</ComboBoxItem>
                                        <ComboBoxItem>Pharmacy</ComboBoxItem>
                                        <ComboBoxItem>Gynecology &amp; Obstetrics</ComboBoxItem>
                                    </ComboBox>

                                    <TextBox Grid.Row="4" Grid.Column="0"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc phoneBox}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Name="PhoneTextBox"
                                             Margin="0,0,5,10"
                                             Text="{Binding phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint= "{loc:Loc emailBox}"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Name="EmailTextBox"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="5,0,0,10"
                                             Text="{Binding email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                    <CheckBox Grid.Row="5" Grid.ColumnSpan="2"
                                              Content="{loc:Loc activeGrid}"
                                              IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              Name="ActiveBox"
                                              IsChecked="{Binding active}"
                                              Margin="0,0,0,10"
                                              Style="{DynamicResource MaterialDesignCheckBox}"/>

                                    <TextBox Grid.Row="6" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="100"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             Name="NotesTextBox"
                                             Margin="0,0,0,10"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint=""
                                             Text="{Binding notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                    <materialDesign:Snackbar Grid.Row="7" Grid.Column="0" 
                                                             MessageQueue="{Binding DataContext.MessageQueue, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Bottom"
                                                             HorizontalContentAlignment="Center"
                                                             Padding="0"
                                         
                                                             Background="{DynamicResource MaterialDesignPaper}"
                                                             Foreground="{DynamicResource MaterialDesignBody}"
                                    >
                                        <materialDesign:Snackbar.Resources>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            </Style>
                                        </materialDesign:Snackbar.Resources>
                                    </materialDesign:Snackbar>
                                    <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Right">
                                        <Button Content="{loc:Loc cancelBtn}" IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DataContext.CancelEmployeeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Button Content="{loc:Loc saveBtn}"  IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0" Command="{Binding DataContext.SaveEmployeeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
