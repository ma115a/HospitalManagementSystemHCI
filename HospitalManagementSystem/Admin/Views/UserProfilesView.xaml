<UserControl x:Class="HospitalManagementSystem.Admin.Views.UserProfilesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back bar -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Toolbar (no search) -->
                    <Border DockPanel.Dock="Top"
                            
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="New"   Style="{DynamicResource MaterialDesignFlatButton}"/>
                            <Button Content="Edit"  Style="{DynamicResource MaterialDesignFlatButton}"/>
                            <Button Content="Delete" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}"/>
                            <Button Content="Reset password" Style="{DynamicResource MaterialDesignFlatButton}"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Users list -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Users" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Grid.Row="1"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Users}"
                                          SelectedItem="{Binding SelectedUser}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="2*"/>
                                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- User details -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="User Details"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <TextBox Grid.Row="1" Grid.ColumnSpan="2"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Full name"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,0,10"
                                             Text="{Binding SelectedUser.FullName}"/>

                                    <TextBox Grid.Row="2" Grid.Column="0"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Username"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,5,10"
                                             Text="{Binding SelectedUser.Username}"/>
                                    <PasswordBox Grid.Row="2" Grid.Column="1"
                                                 materialDesign:HintAssist.Hint="Password (set/reset)"
                                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                 materialDesign:HintAssist.IsFloating="False"
                                                 Margin="5,0,0,10"
                                                 Style="{DynamicResource MaterialDesignFilledPasswordBox}"/>

                                    <ComboBox Grid.Row="3" Grid.Column="0"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Role"
                                              ItemsSource="{Binding Roles}"
                                              Margin="0,0,5,10"
                                              SelectedItem="{Binding SelectedUser.Role}"/>
                                    <ComboBox Grid.Row="3" Grid.Column="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Department (optional)"
                                              ItemsSource="{Binding Departments}"
                                              Margin="5,0,0,10"
                                              SelectedItem="{Binding SelectedUser.Department}"/>

                                    <TextBox Grid.Row="4" Grid.Column="0"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Phone"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,5,10"
                                             Text="{Binding SelectedUser.Phone}"/>
                                    <TextBox Grid.Row="4" Grid.Column="1"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Email"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="5,0,0,10"
                                             Text="{Binding SelectedUser.Email}"/>

                                    <CheckBox Grid.Row="5" Grid.ColumnSpan="2"
                                              Content="Active"
                                              IsChecked="{Binding SelectedUser.IsActive}"
                                              Margin="0,0,0,10"
                                              Style="{DynamicResource MaterialDesignCheckBox}"/>

                                    <TextBox Grid.Row="6" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="100"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0,0,0,10"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Notes"
                                             Text="{Binding SelectedUser.Notes}"/>

                                    <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                        <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
