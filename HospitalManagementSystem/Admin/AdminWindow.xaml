<Window x:Class="HospitalManagementSystem.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HospitalManagementSystem"
        mc:Ignorable="d"
        Title="Administrator Dashboard"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}">

    <!-- ESC to go back to dashboard from inner slides -->
    <Window.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{Binding GoToDashboardCommand}"/>
    </Window.InputBindings>

    <DockPanel>
        <!-- TOP APP BAR -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Hospital Icon -->
                <materialDesign:PackIcon Kind="HospitalBuilding"
                                         Width="36" Height="36"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>

                <!-- Hospital Name -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="City General Hospital"
                               d:Text="City General Hospital (Preview)"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <TextBlock Text="Administration Console"
                               FontSize="12" Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>

                <!-- Logged-in Admin -->
                <Border Grid.Column="2" Padding="12,8" CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ShieldAccount"
                                                 Width="20" Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel>
                            <TextBlock Text="Admin: Jane Smith"
                                       d:Text="Admin: Jane Smith"
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            <TextBlock Text="@admin"
                                       d:Text="@admin"
                                       FontSize="12" Opacity=".9"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- TRANSITIONER -->
        <materialDesign:Transitioner x:Name="AdminSwitcher"
                                     SelectedIndex="0"
                                     Padding="32">

            <!-- SLIDE 0: DASHBOARD -->
            <materialDesign:TransitionerSlide>
                <local:AdminHomePageView></local:AdminHomePageView>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 1: USER PROFILES -->
            <materialDesign:TransitionerSlide>
               <local:UserProfilesView></local:UserProfilesView>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 2: DEPARTMENTS & ROOMS -->
            <materialDesign:TransitionerSlide>
                <local:DepartmentRoomView></local:DepartmentRoomView>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 3: VEHICLES -->
            <materialDesign:TransitionerSlide>
                <local:VehiclesView></local:VehiclesView>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 4: MEDICATIONS & INVENTORY -->
            <materialDesign:TransitionerSlide>
                <local:MedicationInventoryView></local:MedicationInventoryView>
            </materialDesign:TransitionerSlide>

        </materialDesign:Transitioner>
    </DockPanel>
</Window>
