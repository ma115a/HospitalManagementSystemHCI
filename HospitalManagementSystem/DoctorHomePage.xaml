<Window x:Class="HospitalManagementSystem.DoctorHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HospitalManagementSystem"
        mc:Ignorable="d"
        Title="Doctor Dashboard" Height="700" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <!-- Hospital Icon -->
                <materialDesign:PackIcon Kind="HospitalBuilding" Width="36" Height="36"
VerticalAlignment="Center"
Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>


                <!-- Hospital Name -->
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Boljnica" d:Text="City General Hospital (Preview)"
FontSize="20" FontWeight="SemiBold"
Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <TextBlock Text="Hospital Management System" FontSize="12" Opacity=".9"
Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>


                <!-- Logged-in Doctor -->
                <Border Grid.Column="2" 
                        Padding="12,8" 
                        CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">
                    
                    <StackPanel Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Stethoscope" 
                                                 Width="20" 
                                                 Height="20"
                                                  
                                                 VerticalAlignment="Center"
                                                   Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="dr Mihajlo Vukajlovic" 
                                       d:Text="Dr. Jane Doe"
                                        FontWeight="SemiBold"
                                       FontSize="14"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            <TextBlock Text="malisa" 
                                       d:Text="@jdoe"
                                        FontSize="14" 
                                       Opacity=".9"
                                       TextAlignment="Center"
                                        Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <materialDesign:Transitioner x:Name="ContentSwitcher" SelectedIndex="0" Padding="40">
            <materialDesign:TransitionerSlide>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        
                        <TextBlock Text="Doctor Actions" 
                                   FontSize="22" 
                                   FontWeight="SemiBold"
                                    Foreground="{DynamicResource MaterialDesign.Brush.OnBackground}"/>

                        <UniformGrid Grid.Row="1" Columns="3">

                            
                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="FileDocumentOutline" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="View Medical Records" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>
                                    
                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="Browse and view patient medical records." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" Height="30" materialDesign:ElevationAssist.Elevation="Dp2" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Pill" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="Make Prescription" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>

                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="Create a new prescription for a patient." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" materialDesign:ElevationAssist.Elevation="Dp2" Height="30" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="ClipboardPulseOutline" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="Laboratory results" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>

                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="Review completed lab test results." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" Height="30" materialDesign:ElevationAssist.Elevation="Dp2" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="FlaskOutline" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="Request Laboratory" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>

                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="Order lab tests and track their status." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" Height="30" materialDesign:ElevationAssist.Elevation="Dp2" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>

                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="Bed" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="Make Admission" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>

                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="Admit a patient to a room." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" Height="30" materialDesign:ElevationAssist.Elevation="Dp2" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>


                            <materialDesign:Card MinHeight="180" MinWidth="200" MaxWidth="400" MaxHeight="300" Margin="20" UniformCornerRadius="12" materialDesign:ElevationAssist.Elevation="Dp8" Padding="20">
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <materialDesign:PackIcon Kind="StanleyKnife" Width="32" Height="32"/>
                                        <Separator Width="10" Background="Transparent"/>
                                        <TextBlock Text="View surgeries" Width="100" FontWeight="SemiBold" TextWrapping="Wrap" FontSize="16"/>

                                    </StackPanel>
                                    <Separator Height="10" Background="Transparent"/>
                                    <TextBlock Text="See past and scheduled surgeries." FontSize="14" TextWrapping="Wrap"/>
                                    <Separator Height="10" Background="Transparent"/>
                                    <Button Content="Open" Width="100" Height="30" materialDesign:ElevationAssist.Elevation="Dp2" Style="{DynamicResource MaterialDesignRaisedLightButton}"/>

                                </StackPanel>
                            </materialDesign:Card>


                        </UniformGrid>


                       

                    </Grid>
                </ScrollViewer>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </DockPanel>
</Window>
