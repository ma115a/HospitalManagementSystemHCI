<Window x:Class="HospitalManagementSystem.DoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HospitalManagementSystem"
        mc:Ignorable="d"
        Title="Doctor Dashboard" Height="800" Width="900"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <local:DoctorTopPanel DockPanel.Dock="Top"></local:DoctorTopPanel>


        <materialDesign:Transitioner x:Name="ContentSwitcher" Padding="40"  SelectedIndex="0">
            <materialDesign:TransitionerSlide>
                <local:DoctorHomePage></local:DoctorHomePage>
            </materialDesign:TransitionerSlide>
            <materialDesign:TransitionerSlide>
                <local:MedicalRecordView></local:MedicalRecordView>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </DockPanel>
</Window>
