<Window x:Class="HospitalManagementSystem.Nurse.Views.NurseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:HospitalManagementSystem.Nurse.Views"
        xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
        xmlns:vm="clr-namespace:HospitalManagementSystem.Nurse.ViewModels"
        mc:Ignorable="d"
        Title="Nurse Dashboard"
        Height="800" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        >
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:NurseRegisterPatientViewModel}">
            <views:NurseRegisterPatientView></views:NurseRegisterPatientView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NurseScheduleAppointmentViewModel}">
            <views:NurseScheduleAppointmentView></views:NurseScheduleAppointmentView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NurseAppointmentsViewModel}">
            <views:NurseAppointments></views:NurseAppointments>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NurseAdmissionsViewModel}">
            <views:NurseAdmissions></views:NurseAdmissions>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:NurseLabViewModel}">
            <views:NurseLab></views:NurseLab>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>

        <!-- TOP APP BAR -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="HospitalBuilding"
                                         Width="36" Height="36"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Hospital Management System"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <TextBlock Text="{loc:Loc nurseTitle}"
                               FontSize="12" Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>

                <Border Grid.Column="2" Padding="12,8" CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="MedicalBag" Width="20" Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel>
                            <TextBlock Text="{Binding Employee.name}"
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            <TextBlock Text="{Binding Employee.username}" FontSize="12" Opacity=".9"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Button Grid.Column="3"
                        Style="{StaticResource MaterialDesignIconButton}"
                    Click="SettingsButton_Click">
                    <materialDesign:PackIcon Kind="Cog" 
                                             Width="20" 
                                             Height="20"
                                             Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <Button.ContextMenu>
                        
                        <ContextMenu Opened="SettingsMenu_Opened">
                            <!-- Languages -->
                            <MenuItem Header="🌐 Language">
                                <MenuItem Header="English" Tag="en" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Srpski" Tag="sr" Click="LanguageMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Deutsch" Tag="de" Click="LanguageMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Theme -->
                            <MenuItem Header="🎨 Theme">
                                <MenuItem Header="Light" Tag="Light" Click="ThemeMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Dark" Tag="Dark" Click="ThemeMenu_Click" IsCheckable="True"/>
                            </MenuItem>

                            <!-- Primary Colors -->
                            <MenuItem Header="🎨 Primary Color">
                                <MenuItem Header="Indigo" Tag="#3F51B5" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Blue" Tag="#2196F3" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                                <MenuItem Header="Green" Tag="#4CAF50" Click="PrimaryColorMenu_Click" IsCheckable="True"/>
                            </MenuItem>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>

        <!-- CONTENT SWITCHER -->
        <materialDesign:Transitioner x:Name="NurseSwitcher"
                                     SelectedIndex="{Binding CurrentSlideIndex}"
                                     Padding="28">

            <!-- SLIDE 0: DASHBOARD -->
            <materialDesign:TransitionerSlide>
                <views:NurseHomePage></views:NurseHomePage>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 1: APPOINTMENTS -->
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding AppointmentsVm}"></ContentPresenter>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 2: SCHEDULE APPOINTMENT -->
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding ScheduleVm }"/>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 3: ADMISSIONS & BEDS -->
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding AdmissionVm}"/>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 4: LAB (REQUESTS & RESULTS) -->
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding LabVm}"/>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 5: SURGERIES (assign nurses) -->
            <materialDesign:TransitionerSlide>
                <views:NurseSurgeries></views:NurseSurgeries>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 6: PATIENTS (registry) -->
            <materialDesign:TransitionerSlide>
                <ContentPresenter Content="{Binding PatientsVm}" />
            </materialDesign:TransitionerSlide>

            

        </materialDesign:Transitioner>
    </DockPanel>
</Window>
