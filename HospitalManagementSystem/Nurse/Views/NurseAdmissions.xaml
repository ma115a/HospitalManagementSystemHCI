<UserControl x:Class="HospitalManagementSystem.Nurse.Views.NurseAdmissions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             xmlns:utils="clr-namespace:HospitalManagementSystem.Utils"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <utils:DateConverter x:Key="DateConverter"></utils:DateConverter>
    </UserControl.Resources>
    <DockPanel>
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border DockPanel.Dock="Top"
                                        
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="New"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewAdmissionCommand}"/>
                            <Button Content="Edit"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditAdmissionCommand}"/>
                            <Button Content="Delete" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeleteAdmissionCommand}"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Rooms & occupancy -->
                        
<materialDesign:Card Grid.Column="0" Margin="10,0,5,10"
                     Padding="16" UniformCornerRadius="12"
                     materialDesign:ElevationAssist.Elevation="Dp8">
  <Grid>
    <!-- Added rows 3 & 4 for Admissions -->
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>  <!-- title -->
      <RowDefinition Height="Auto"/>  <!-- filters -->
      <RowDefinition Height="1*"/>    <!-- rooms grid -->
      <RowDefinition Height="Auto"/>  <!-- admissions header -->
      <RowDefinition Height="*"/>     <!-- admissions grid -->
    </Grid.RowDefinitions>

    <TextBlock Text="Rooms" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>

    <!-- Filters -->
    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <ComboBox Grid.Column="0"
                Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Hint="Department"
                materialDesign:HintAssist.IsFloating="False"
                ItemsSource="{Binding Departments}"
                Margin="0,0,0,10"
                SelectedItem="{Binding FilterDepartment, Mode=TwoWay}">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <!-- show just department name (adjust if you expose a Head later) -->
            <TextBlock Text="{Binding name}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>

      <Border Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,10">
        <Button Content="Clear"
                Style="{DynamicResource MaterialDesignFlatButton}"
                Command="{Binding ClearFilterCommand}"/>
      </Border>
    </Grid>

    <!-- Rooms list -->
    <DataGrid Grid.Row="2"
              Style="{DynamicResource MaterialDesignDataGrid}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              ItemsSource="{Binding Rooms}"
              SelectedItem="{Binding SelectedRoom}">
      <DataGrid.Columns>
        <!-- Keep your properties, or switch to room_id/capacity if that’s what your model exposes -->
        <DataGridTextColumn Header="Room" Binding="{Binding number}" Width="*"/>
        <DataGridTextColumn Header="Capacity" Binding="{Binding capacity}" Width="Auto"/>
      </DataGrid.Columns>
    </DataGrid>

    <!-- Admissions header -->
    <TextBlock Grid.Row="3"
               Text="Admissions for selected room"
               FontSize="14" FontWeight="SemiBold"
               Margin="0,12,0,6"/>

    <!-- Admissions list for the SelectedRoom -->
    <DataGrid Grid.Row="4"
              Style="{DynamicResource MaterialDesignDataGrid}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              ItemsSource="{Binding Admissions}"
              SelectedItem="{Binding SelectedAdmission}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Patient"
                            Binding="{Binding patient_umcnNavigation.name}"
                            Width="1*"/>
        <DataGridTextColumn Header="Admitted"
                            Binding="{Binding admission_date}"
                            Width="*"/>
        <DataGridTextColumn Header="Discharged"
                            Binding="{Binding discharge_date}"
                            Width="*"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</materialDesign:Card>
                        <!-- Admit / Discharge -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,10"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Admission"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <ComboBox Grid.Row="1" Grid.ColumnSpan="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Patient"
                                              materialDesign:HintAssist.IsFloating="False"
                                              materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                              ItemsSource="{Binding Patients}"
                                              IsEnabled="{Binding IsControlsEnabled}"
                                              SelectedValuePath="umcn"
                                              SelectedValue="{Binding SelectedAdmission.patient_umcn, Mode=TwoWay}"
                                              SelectedItem="{Binding SelectedPatient}"
                                              Margin="0,0,0,10"
                                              >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding name}"></TextBlock>
                                                    <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                    <TextBlock Text="{Binding umcn}"></TextBlock>
                                                    <TextBlock Text=" )"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    

                                    <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Admit date"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                    materialDesign:HintAssist.IsFloating="False"
                                                    Margin="0,0,5,10"
                                                    IsEnabled="{Binding IsControlsEnabled}"
                                                    SelectedDate="{Binding SelectedAdmission.admission_date, Mode=TwoWay, Converter={StaticResource DateConverter}}"/>
                                        <DatePicker Grid.Column="1"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Expected discharge"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                    materialDesign:HintAssist.IsFloating="False"
                                                    Margin="0,0,0,10"
                                                    IsEnabled="{Binding IsControlsEnabled}"
                                                    SelectedDate="{Binding SelectedAdmission.discharge_date, Mode=TwoWay, Converter={StaticResource DateConverter}}"/>
                                    </Grid>

                                    

                                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             materialDesign:HintAssist.Hint="Reason / Notes"
                                             Margin="0,0,0,10"
                                             IsEnabled="{Binding IsControlsEnabled}"
                                             Text="{Binding SelectedAdmission.reason, Mode=TwoWay}"/>

                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button IsEnabled="{Binding IsControlsEnabled}" Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding CancelAdmissionCommand}"/>
                                        <Button Content="Save"     Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0" Command="{Binding SaveAdmissionCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
