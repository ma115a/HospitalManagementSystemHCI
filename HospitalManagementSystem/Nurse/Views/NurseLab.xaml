<UserControl x:Class="HospitalManagementSystem.Nurse.Views.NurseLab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">
    <DockPanel>
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border DockPanel.Dock="Top"
                                                    
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="New"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewAdmissionCommand}"/>
                            <Button Content="Edit"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditAdmissionCommand}"/>
                            <Button Content="Delete" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeleteAdmissionCommand}"/>
                        </StackPanel>
                    </Border>

                    <materialDesign:Card Margin="10"
                                         Padding="5" UniformCornerRadius="12"
                                         materialDesign:ElevationAssist.Elevation="Dp8"
                                         ClipToBounds="True">
                        <TabControl>
                            <!-- Requests -->
                            <TabItem Header="Requests">
                                <Grid Margin="8,4,8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- List -->
                                    <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" Padding="10"
                                                         materialDesign:ElevationAssist.Elevation="Dp2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Lab Requests" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                                      AutoGenerateColumns="False"
                                                      ItemsSource="{Binding LabRequests}"
                                                      SelectedItem="{Binding SelectedLabRequest}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Date" Binding="{Binding RequestedAt, StringFormat=d}" Width="*"/>
                                                    <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="2*"/>
                                                    <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="2*"/>
                                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </materialDesign:Card>

                                    <!-- Details -->
                                    <materialDesign:Card Grid.Column="1" Margin="5,0,0,0" Padding="10"
                                                         materialDesign:ElevationAssist.Elevation="Dp2"
                                                         >
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.ColumnSpan="2" Text="Request Details"
                                                           FontSize="16" FontWeight="SemiBold" Margin="0,0,0,4"/>

                                                
                                                <ComboBox Grid.Row="1" Grid.ColumnSpan="2"
                                                          Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                          materialDesign:HintAssist.Hint="Patient"
                                                          materialDesign:HintAssist.IsFloating="False"
                                                          materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                          ItemsSource="{Binding Patients}"
                                                          IsEnabled="{Binding IsControlsEnabled}"
                                                          SelectedValuePath="umcn"
                                                          SelectedValue="{Binding SelectedAdmission.patient_umcn, Mode=TwoWay}"
                                                          SelectedItem="{Binding SelectedPatient}"
                                                          Margin="0,0,0,10"
                                                >
                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding name}"></TextBlock>
                                                                <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                                <TextBlock Text="{Binding umcn}"></TextBlock>
                                                                <TextBlock Text=" )"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>

                                                
                                                <TextBox Grid.Row="2" Grid.ColumnSpan="2"
                                                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                         materialDesign:HintAssist.Hint="Test name"
                                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                         materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                         materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                         materialDesign:HintAssist.IsFloating="False"
                                                         Margin="0,0,0,10"
                                                         Text="{Binding SelectedLabRequest.TestName, Mode=TwoWay}"/>

                                                <TextBox Grid.Row="3" Grid.ColumnSpan="2"
                                                         AcceptsReturn="True" TextWrapping="Wrap"
                                                         VerticalAlignment="Stretch" MinHeight="120"
                                                         Margin="0,0,0,10"
                                                         materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                         materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                         materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                         materialDesign:HintAssist.IsFloating="False"
                                                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                         materialDesign:HintAssist.Hint="Clinical information / Reason"
                                                         Text="{Binding SelectedLabRequest.ClinicalInfo}"/>

                                                <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                                    <Button Content="Submit" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </ScrollViewer>
                                    </materialDesign:Card>
                                </Grid>
                            </TabItem>

                            <!-- Results -->
                            <TabItem Header="Results">
                                <Grid Margin="8,4,8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- List -->
                                    <materialDesign:Card Grid.Column="0" Margin="0,0,8,0" Padding="12"
                                                         materialDesign:ElevationAssist.Elevation="Dp2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Lab Results" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                            <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                                      AutoGenerateColumns="False"
                                                      ItemsSource="{Binding LabResults}"
                                                      SelectedItem="{Binding SelectedLabResult}">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                                                    <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="2*"/>
                                                    <DataGridTextColumn Header="Test" Binding="{Binding TestName}" Width="2*"/>
                                                    <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="2*"/>
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Grid>
                                    </materialDesign:Card>

                                    <!-- Viewer -->
                                    <materialDesign:Card Grid.Column="1" Margin="8,0,0,0" Padding="12"
                                                         materialDesign:ElevationAssist.Elevation="Dp2"
                                                         ClipToBounds="True">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Result Details" FontSize="16" FontWeight="SemiBold"/>
                                                <TextBox Grid.Row="1"
                                                         AcceptsReturn="True" TextWrapping="Wrap"
                                                         VerticalAlignment="Stretch" MinHeight="200"
                                                         Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                         materialDesign:HintAssist.Hint="Result data"
                                                         Text="{Binding SelectedLabResult.ResultData}"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </materialDesign:Card>
                                </Grid>
                            </TabItem>
                        </TabControl>
                    </materialDesign:Card>
                </DockPanel>
</UserControl>
