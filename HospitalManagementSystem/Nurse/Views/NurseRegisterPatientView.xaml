<UserControl x:Class="HospitalManagementSystem.Nurse.Views.NurseRegisterPatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:loc="clr-namespace:HospitalManagementSystem.Utils"
             Background="{DynamicResource MaterialDesignPaper}"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding DataContext.GoToDashboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                               >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="{loc:Loc backToDashboard}"/>
                            </StackPanel>
                        </Button>
                    </Border>
            <Border DockPanel.Dock="Top"
                                
                    Background="{DynamicResource MaterialDesign.Brush.Surface}"
                    BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                    BorderThickness="0,0,0,1" Padding="8,6">
                <StackPanel Orientation="Horizontal">
                    <Button Content="{loc:Loc newBtn}"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding NewPatientCommand}"/>
                    <Button Content="{loc:Loc editBtn}" IsEnabled="{Binding IsControls2Enabled}"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditPatientCommand}"/>
                    <Button Content="{loc:Loc deleteBtn}" IsEnabled="{Binding IsControls2Enabled}" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeletePatientCommand}"/>
                </StackPanel>
            </Border>

                    <Grid Margin="0,8,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- List -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{loc:Loc patients}" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding Patients}"
                                          SelectedItem="{Binding SelectedPatient}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{loc:Loc umcn}" Binding="{Binding umcn}" Width="*"/>
                                        <DataGridTextColumn Header="{loc:Loc nameGrid}" Binding="{Binding name}" Width="*"/>
                                        <DataGridTextColumn Header="{loc:Loc phone}" Binding="{Binding phone}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Details -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             >
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid DataContext="{Binding SelectedPatient}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="{loc:Loc patientDetails}"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <TextBox Grid.Row="1" Grid.ColumnSpan="2"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc umcn}"
                                             IsEnabled="{Binding DataContext.UmcnEditable, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0, 0, 0, 10"
                                             Text="{Binding umcn}"/>

                                    <TextBox Grid.Row="2" Grid.ColumnSpan="2"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc nameGrid}"
                                             
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0, 0, 5, 10"
                                             Text="{Binding name}"/>
                                    

                                    <TextBox Grid.Row="3" Grid.ColumnSpan="2"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc phone}"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0, 0, 0, 10"
                                             Text="{Binding phone}"/>

                                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="{loc:Loc notes}"
                                             IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Margin="0, 0, 0, 10"
                                             Text="{Binding notes}"/>
                                    
                                    <materialDesign:Snackbar Grid.Row="5" Grid.Column="0" 
                                                             MessageQueue="{Binding DataContext.MessageQueue, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Bottom"
                                                             HorizontalContentAlignment="Center"
                                                             Padding="0"
                                         
                                                             Background="{DynamicResource MaterialDesignPaper}"
                                                             Foreground="{DynamicResource MaterialDesignBody}"
                                    >
                                        <materialDesign:Snackbar.Resources>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                            </Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                            </Style>
                                        </materialDesign:Snackbar.Resources>
                                    </materialDesign:Snackbar>

                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                        <Button Content="{loc:Loc cancelBtn}" IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                        <Button Content="{loc:Loc saveBtn}"  IsEnabled="{Binding DataContext.IsControlsEnabled, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0" Command="{Binding DataContext.SavePatientCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
