<UserControl x:Class="HospitalManagementSystem.Nurse.Views.NurseHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        

                        <UniformGrid Grid.Row="1" Columns="3">
                            <UniformGrid.Resources>
                                <Style TargetType="materialDesign:Card">
                                    <Setter Property="Padding" Value="20"/>
                                    <Setter Property="UniformCornerRadius" Value="12"/>
                                    <Setter Property="Margin" Value="12"/>
                                    <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp8"/>
                                </Style>
                            </UniformGrid.Resources>

                            <!-- Appointments -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarClock" Width="32" Height="32"/>
                                        <TextBlock Text="Appointments" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="View/manage daily schedules and update status." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="120"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToAppointmentsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Schedule Appointment -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarPlus" Width="32" Height="32"/>
                                        <TextBlock Text="Schedule Appointment" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Create a new appointment for a patient." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="160"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToScheduleAppointmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Admissions & Beds -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Bed" Width="32" Height="32"/>
                                        <TextBlock Text="Admissions and Beds" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Admit/discharge patients and track room occupancy." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="120"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToAdmissionsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Lab (Requests & Results) -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FlaskOutline" Width="32" Height="32"/>
                                        <TextBlock Text="Lab (Requests and Results)" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Create lab requests and follow results." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="120"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToLabCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Surgeries -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="StanleyKnife" Width="32" Height="32"/>
                                        <TextBlock Text="Surgeries" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="See schedule and assign circulating/scrub nurses." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="120"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToSurgeriesCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                            <!-- Patients (Registry) -->
                            <materialDesign:Card>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountBox" Width="32" Height="32"/>
                                        <TextBlock Text="Patients" Margin="10,0,0,0"
                                                   FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Grid.Row="1" Margin="0,12,0,0" Opacity=".9"
                                               Text="Create/edit patient demographics." TextWrapping="Wrap"/>
                                    <Button Grid.Row="2" Content="Open" Width="120"
                                            Style="{DynamicResource MaterialDesignRaisedLightButton}"
                                            Command="{Binding DataContext.GoToPatientsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            />
                                </Grid>
                            </materialDesign:Card>

                           
                        </UniformGrid>
                    </Grid>
                </ScrollViewer>
</UserControl>
