<UserControl x:Class="HospitalManagementSystem.Nurse.Views.NurseAppointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back bar -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Command="{Binding DataContext.GoToDashboardCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>
                    <Border DockPanel.Dock="Top"
                            
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="New"   Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DataContext.GoToScheduleAppointmentCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            <Button Content="Edit"  Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding EditAppointmentCommand}"/>
                            <Button Content="Delete" Foreground="Red" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding DeleteAppointmentCommand}"/>
                        </StackPanel>
                    </Border>

                    <Grid Margin="0,8,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- List -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Appointments" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <!-- Filters -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker Grid.Column="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="Date"
                                                materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                materialDesign:HintAssist.IsFloating="False"
                                                Margin="0,0,5,10"
                                                SelectedDate="{Binding FilterDate}"/>
                                    
                                    <ComboBox Grid.Column="1" 
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              materialDesign:HintAssist.IsFloating="False"
                                              ItemsSource="{Binding Doctors}"
                                              Margin="0,0,0,10"
                                              SelectedItem="{Binding SelectedDoctorFilter, Mode=TwoWay}">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding employee.name}"></TextBlock>
                                                    <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                    <TextBlock Text="{Binding specialty}"></TextBlock>
                                                    <TextBlock Text=" )"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                    <ComboBox Grid.Column="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Status"
                                              materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                              materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                              materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                              materialDesign:HintAssist.IsFloating="False"
                                              Margin="5,0,5,10"
                                              SelectedValuePath="Content"
                                              SelectedValue="{Binding FilterStatus}">
                                        <ComboBoxItem>Scheduled</ComboBoxItem>
                                        <ComboBoxItem>Checked-in</ComboBoxItem>
                                        <ComboBoxItem>Completed</ComboBoxItem>
                                        <ComboBoxItem>Cancelled</ComboBoxItem>
                                        <ComboBoxItem>No-show</ComboBoxItem>
                                    </ComboBox>
                                    
                                    <Border Grid.Column="3" VerticalAlignment="Center" Margin="5,0,0,10">
                                        <Button Content="Clear"
                                                Style="{DynamicResource MaterialDesignFlatButton}"
                                                Command="{Binding ClearFiltersCommand}"/>
                                    </Border>
                                </Grid>

                                <DataGrid Grid.Row="2" Margin="0,8,0,0"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          IsReadOnly="True"
                                          ItemsSource="{Binding AppointmentsView}"
                                          SelectedItem="{Binding SelectedAppointment, Mode=TwoWay}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Date" Binding="{Binding date }" Width="Auto"/>
                                        <DataGridTextColumn Header="Patient" Binding="{Binding patient_umcnNavigation.name}" Width="2*"/>
                                        <DataGridTextColumn Header="Doctor" Binding="{Binding doctor.employee.name}" Width="2*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Details -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                            >
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Appointment Details"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <!-- Date/Time -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Date"
                                                    materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                    materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                    materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                    materialDesign:HintAssist.IsFloating="False"
                                                    Margin="0, 0, 5, 10"
                                                    IsEnabled="{Binding IsControlsEnabled}"
                                                    SelectedDate="{Binding NewAppointmentDate}"/>
                                        <TextBox Grid.Column="1"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:HintAssist.Hint="Time (HH:mm)"
                                                 materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                                 materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                                 materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                                 materialDesign:HintAssist.IsFloating="False"
                                                 Margin="5, 0, 0, 10"
                                                 IsEnabled="{Binding IsControlsEnabled}"
                                                 PreviewTextInput="TimeBox_PreviewTextInput"
                                                 TextChanged="TimeBox_TextChanged"
                                                 PreviewKeyDown="TimeBox_PreviewKeyDown"
                                                 Text="{Binding NewAppointmentTime}"/>
                                    </Grid>

                                    <ComboBox Grid.Row="2" Grid.ColumnSpan="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Patient"
                                              materialDesign:HintAssist.IsFloating="False"
                                              ItemsSource="{Binding Patients}"
                                              IsTextSearchEnabled="True"
                                              IsEnabled="{Binding IsControlsEnabled}"
                                              SelectedValuePath="umcn"
                                              SelectedValue="{Binding SelectedAppointment.patient_umcn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Margin="0,0,0,10">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding name}"></TextBlock>
                                                    <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                    <TextBlock Text="{Binding umcn}"></TextBlock>
                                                    <TextBlock Text=" )"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>


                                    <ComboBox Grid.Row="4" Grid.ColumnSpan="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Status"
                                              ItemsSource="{Binding AppointmentStatuses}"
                                              materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                              materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                              materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                              materialDesign:HintAssist.IsFloating="False"
                                              Margin="0,0,0,10"
                                              SelectedValuePath="Content"
                                              SelectedValue="{Binding SelectedAppointment.status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                                             IsEnabled="{Binding IsControlsEnabled}"
                                              >
                                        
                                        <ComboBoxItem>Scheduled</ComboBoxItem>
                                        <ComboBoxItem>Checked-in</ComboBoxItem>
                                        <ComboBoxItem>Completed</ComboBoxItem>
                                        <ComboBoxItem>Cancelled</ComboBoxItem>
                                        <ComboBoxItem>No-show</ComboBoxItem>
                                    </ComboBox>
                                    
                                    <ComboBox Grid.Row="3" Grid.ColumnSpan="2" 
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              materialDesign:HintAssist.IsFloating="False"
                                              ItemsSource="{Binding Doctors}"
                                              Margin="0,0,0,10"
                                              SelectedValuePath="employee_id"
                                              SelectedValue="{Binding SelectedAppointment.doctor_id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsEnabled="{Binding IsControlsEnabled}"
                                              >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding employee.name}"></TextBlock>
                                                    <TextBlock Text=" (" Margin="4,0,0,0"></TextBlock>
                                                    <TextBlock Text="{Binding specialty}"></TextBlock>
                                                    <TextBlock Text=" )"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <TextBox Grid.Row="5" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             materialDesign:TextFieldAssist.TextFieldCornerRadius="6" 
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             materialDesign:TextFieldAssist.RippleOnFocusEnabled="True"
                                             materialDesign:HintAssist.IsFloating="False"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Notes / Reason"
                                             Margin="0, 0, 0, 10"
                                             IsEnabled="{Binding IsControlsEnabled}"
                                             Text="{Binding SelectedAppointment.notes}"/>

                                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                        <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}" Command="{Binding CancelAppointmentCommand}"/>
                                        <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0" Command="{Binding SaveAppointmentCommand}"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
