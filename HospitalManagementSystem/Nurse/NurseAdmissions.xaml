<UserControl x:Class="HospitalManagementSystem.NurseAdmissions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Rooms & occupancy -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Rooms (occupancy)" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Grid.Row="1" Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Rooms}"
                                          SelectedItem="{Binding SelectedRoom}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Room" Binding="{Binding Number}" Width="*"/>
                                        <DataGridTextColumn Header="Dept" Binding="{Binding DepartmentName}" Width="2*"/>
                                        <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="Auto"/>
                                        <DataGridTextColumn Header="Occupied" Binding="{Binding Occupied}" Width="Auto"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Admit / Discharge -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             ClipToBounds="True">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Admission / Discharge"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <ComboBox Grid.Row="1" Grid.ColumnSpan="2"
                                              IsEditable="True" StaysOpenOnEdit="True"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Patient"
                                              ItemsSource="{Binding Patients}"
                                              Text="{Binding Admission.Patient, Mode=TwoWay}"/>

                                    <Grid Grid.Row="2" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Admit date"
                                                    SelectedDate="{Binding Admission.AdmitDate}"/>
                                        <DatePicker Grid.Column="1"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Expected discharge"
                                                    SelectedDate="{Binding Admission.ExpectedDischarge}"/>
                                    </Grid>

                                    <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox Grid.Column="0"
                                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                  materialDesign:HintAssist.Hint="Department"
                                                  ItemsSource="{Binding Departments}"
                                                  SelectedItem="{Binding Admission.Department}"/>
                                        <ComboBox Grid.Column="1"
                                                  Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                                  materialDesign:HintAssist.Hint="Room"
                                                  ItemsSource="{Binding Rooms}"
                                                  SelectedItem="{Binding Admission.Room}"/>
                                    </Grid>

                                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Reason / Notes"
                                             Text="{Binding Admission.Notes}"/>

                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Discharge" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                        <Button Content="Admit"     Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
