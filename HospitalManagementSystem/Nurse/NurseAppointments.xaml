<UserControl x:Class="HospitalManagementSystem.NurseAppointments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:HospitalManagementSystem"
             mc:Ignorable="d"
             >
    <DockPanel>
                    <!-- Back bar -->
                    <Border DockPanel.Dock="Top"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource MaterialDesign.Brush.Surface}"
                            BorderBrush="{DynamicResource MaterialDesign.Brush.Divider}"
                            BorderThickness="0,0,0,1" Padding="8,6">
                        <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                Click="GoToDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Back to Dashboard"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <Grid Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2.5*"/>
                        </Grid.ColumnDefinitions>

                        <!-- List -->
                        <materialDesign:Card Grid.Column="0" Margin="10,0,5,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Appointments" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>

                                <!-- Filters -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <DatePicker Grid.Column="0"
                                                Style="{DynamicResource MaterialDesignOutlinedDatePicker}"
                                                materialDesign:HintAssist.Hint="Date"
                                                SelectedDate="{Binding SelectedDate}"/>
                                    <ComboBox Grid.Column="1"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              ItemsSource="{Binding Doctors}"
                                              SelectedItem="{Binding SelectedDoctor}"/>
                                    <ComboBox Grid.Column="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Status"
                                              ItemsSource="{Binding AppointmentStatuses}"
                                              SelectedItem="{Binding SelectedStatus}"/>
                                </Grid>

                                <DataGrid Grid.Row="2" Margin="0,8,0,0"
                                          Style="{DynamicResource MaterialDesignDataGrid}"
                                          AutoGenerateColumns="False"
                                          ItemsSource="{Binding Appointments}"
                                          SelectedItem="{Binding SelectedAppointment}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="Auto"/>
                                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="2*"/>
                                        <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="2*"/>
                                        <DataGridTextColumn Header="Dept" Binding="{Binding Department}" Width="*"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </materialDesign:Card>

                        <!-- Details -->
                        <materialDesign:Card Grid.Column="1" Margin="5,0,10,0"
                                             Padding="16" UniformCornerRadius="12"
                                             materialDesign:ElevationAssist.Elevation="Dp8"
                                             ClipToBounds="True">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.ColumnSpan="2" Text="Appointment Details"
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,6"/>

                                    <!-- Date/Time -->
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <DatePicker Grid.Column="0"
                                                    Style="{DynamicResource MaterialDesignFilledDatePicker}"
                                                    materialDesign:HintAssist.Hint="Date"
                                                    SelectedDate="{Binding SelectedAppointment.Date}"/>
                                        <TextBox Grid.Column="1"
                                                 Style="{DynamicResource MaterialDesignFilledTextBox}"
                                                 materialDesign:HintAssist.Hint="Time (HH:mm)"
                                                 Text="{Binding SelectedAppointment.Time}"/>
                                    </Grid>

                                    <ComboBox Grid.Row="2" Grid.ColumnSpan="2"
                                              IsEditable="True" StaysOpenOnEdit="True"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Patient"
                                              ItemsSource="{Binding Patients}"
                                              Text="{Binding SelectedAppointment.PatientName, Mode=TwoWay}"/>

                                    <ComboBox Grid.Row="3" Grid.ColumnSpan="2"
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Doctor"
                                              ItemsSource="{Binding Doctors}"
                                              SelectedItem="{Binding SelectedAppointment.DoctorName}"/>

                                    <TextBox Grid.Row="4" Grid.ColumnSpan="2"
                                             AcceptsReturn="True" TextWrapping="Wrap"
                                             VerticalAlignment="Stretch" MinHeight="120"
                                             Style="{DynamicResource MaterialDesignFilledTextBox}"
                                             materialDesign:HintAssist.Hint="Notes / Reason"
                                             Text="{Binding SelectedAppointment.Notes}"/>

                                    <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Cancel" Style="{DynamicResource MaterialDesignFlatButton}"/>
                                        <Button Content="Save"   Style="{DynamicResource MaterialDesignRaisedButton}" Margin="8,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </materialDesign:Card>
                    </Grid>
                </DockPanel>
</UserControl>
