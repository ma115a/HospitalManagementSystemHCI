<Window x:Class="HospitalManagementSystem.NurseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HospitalManagementSystem"
        mc:Ignorable="d"
        Title="Nurse Dashboard"
        Height="600" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}">
    

    <DockPanel>

        <!-- TOP APP BAR -->
        <Border DockPanel.Dock="Top" Background="{DynamicResource MaterialDesign.Brush.Primary}">
            <Grid Margin="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="HospitalBuilding"
                                         Width="36" Height="36"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>

                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="City General Hospital"
                               FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                    <TextBlock Text="Nurse Console"
                               FontSize="12" Opacity=".9"
                               Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                </StackPanel>

                <Border Grid.Column="2" Padding="12,8" CornerRadius="20"
                        Background="{DynamicResource MaterialDesign.Brush.Primary.Container}"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="MedicalBag" Width="20" Height="20"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        <Separator Width="10" Background="Transparent"/>
                        <StackPanel>
                            <TextBlock Text="Nurse: Jane Doe"
                                       FontWeight="SemiBold" FontSize="14"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                            <TextBlock Text="@jdoe" FontSize="12" Opacity=".9"
                                       Foreground="{DynamicResource MaterialDesign.Brush.OnPrimary}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- CONTENT SWITCHER -->
        <materialDesign:Transitioner x:Name="NurseSwitcher"
                                     SelectedIndex="0"
                                     Padding="28">

            <!-- SLIDE 0: DASHBOARD -->
            <materialDesign:TransitionerSlide>
                <local:NurseHomePage></local:NurseHomePage>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 1: APPOINTMENTS -->
            <materialDesign:TransitionerSlide>
                <local:NurseAppointments></local:NurseAppointments>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 2: SCHEDULE APPOINTMENT -->
            <materialDesign:TransitionerSlide>
                <local:NurseScheduleAppointment></local:NurseScheduleAppointment>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 3: ADMISSIONS & BEDS -->
            <materialDesign:TransitionerSlide>
                <local:NurseAdmissions></local:NurseAdmissions>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 4: LAB (REQUESTS & RESULTS) -->
            <materialDesign:TransitionerSlide>
                <local:NurseLab></local:NurseLab>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 5: SURGERIES (assign nurses) -->
            <materialDesign:TransitionerSlide>
                <local:NurseSurgeries></local:NurseSurgeries>
            </materialDesign:TransitionerSlide>

            <!-- SLIDE 6: PATIENTS (registry) -->
            <materialDesign:TransitionerSlide>
                <local:NurseRegisterPatient></local:NurseRegisterPatient>
            </materialDesign:TransitionerSlide>

            

        </materialDesign:Transitioner>
    </DockPanel>
</Window>
